	    <div class="page-content">
	   
	        <div class="container-fluid">
				<div class="row">
					<div class="col-lg-8 col-xs-8 col-sm-8 col-md-8"></div>
					<div class="col-lg-4 col-xs-4 col-sm-4 col-md-4" style="margin-bottom: 10px;">
	                    <div class="input-group">
	                        <input id="quickSearch" type="text" placeholder="角色名称" class="form-control" />
	                        <span class="input-group-btn">
		                        <button id="btnQuickSearch" type="button" class="btn btn-primary">
		                        	<i class="fa fa-search"></i>
		                        </button>
	                        </span>
	                    </div>
                    </div>
				</div>
				<div class="row">
                    <div class="col-lg-12">
				        <div class="portlet box portlet-blue" style="margin-bottom: 15px;">
				            <div class="portlet-header">
				                <div class="caption">角色列表</div>
                                <div class="actions">
                                	
                                	<a href="#" class="btn btn-xs btn-warning" data-toggle="modal" data-target="#newShopWizard" onclick="newShopWizard()">
                                		<i class="fa fa-plus"></i>&nbsp;重置
                                	</a>&nbsp;
                                	<a href="#" class="btn btn-xs btn-warning" data-toggle="modal" data-target="#newShopWizard" onclick="addRole()">
                                		<i class="fa fa-plus"></i>&nbsp;新建
                                	</a>&nbsp;
                                	<a href="#" class="btn btn-xs btn-warning" data-toggle="modal" data-target="#newShopWizard" onclick="updateRole()">
                                		<i class="fa fa-plus"></i>&nbsp;修改
                                	</a>&nbsp;
                                	<a href="#" class="btn btn-xs btn-warning" data-toggle="modal" data-target="#newShopWizard" onclick="deleteRole()">
                                		<i class="fa fa-plus"></i>&nbsp;删除
                                	</a>&nbsp;
                                	<!-- 增加导出店铺功能  
                                	<a href="#" class="btn btn-xs btn-orange" data-toggle="" data-target="" onclick="exportList('shopTable','/shop/exportCheck.action','/shop/export.action','exportSelectShop','ExportShop','','')">
                                		<i class="fa fa-save"></i>&nbsp;导出店铺
                                	</a>&nbsp;
                                	 -->
                                </div>
				            </div>
				            <div class="portlet-body">
                                <table id="roleTable" class="table table-hover table-striped table-bordered table-advanced tb-sticky-header" width="100%">
                                    <thead>
                                        <tr>
                                        	<th style="width: 1%; padding: 10px;">
			                                    <input id="chkAll" name="chkAll" type="checkbox" colValue="chk" class="checkall"/>
			                                </th>
                                        	<!--  <th width="10%" colValue="chk"><input type="checkbox"></th>-->
                                            <th width="19%" colValue="_0">序号</th>
                                            <th width="25%" colValue="roleName">角色名称</th>
                                            <th width="25%" colValue="roleDescription">角色描述</th>
                                            <th width="20%" colValue="isAdminrole">管理角色</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                    </tbody>
                                </table>
                                
				            </div>
				        </div>
                    </div>
                </div>
	        </div>
	    </div>
<!-- //////////////////////////////////创建窗口////////////////////////////////////////////////////////////// -->	  
		<div id="creatRole" roleid="" tabindex="-1" role="dialog" aria-labelledby="modal-header-primary-label" data-backdrop="static" aria-hidden="true" class="modal fade">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header modal-header-primary">
                        <button type="button" data-dismiss="modal" aria-hidden="true" class="close">×</button>
                        <h4 id="modal-header-primary-label" class="modal-title">角色详细信息</h4>
                    </div>
                    <div class="modal-body">
						<div id="tabs" style="border:0px;" class="ui-tabs ui-widget ui-widget-content ui-corner-all">
							<div id="tabs-1" style="border:0px;padding:5px 0 0px 0;margin:0;height:200px;width:350px;">
							<form id="userDetail" name="userDetail" class="jqueryui">
								<table align="left" border="0" cellpadding="0" cellspacing="0"
									width="100%">
									<tr>
										<td style="width:30%">角色名称:
											<font color="#ff0000">*</font>
										</td>
										<td style="width:70%">
											<input type="text" id="txtRoleName" name="txtRoleName"/>
											<input type="hidden" id="hidUserID" />
										</td>
									</tr>
									<tr>
										<td >角色描述:
											<font  color="#ff0000"></div>
										</td>
										<td><input type="text" id="txtRoleDesc" name="txtRoleDesc"></td>
									</tr>
									<tr>
										<td>最大人数:
											<font color="#ff0000">*</font>
										</td>
										<td><input type="text" id="txtMax" name="txtMax" value="-1"></td>
									</tr>
									<tr>
										<td>包含人员:</td>
										<td>
											<input type="text" id="txtRoleUsers" readonly>
											<input type="button" class="jt_botton_table2" onclick="selectUsers()" id="btnDot1"  value="...">
											<input type="hidden" id="txtRoleUsersValue">
										</td>
									</tr>
									<tr>
										<td>管理角色:</td>
										<td>
											<select style="width: 100px" id="selIsAdminRole" onchange="adminRoleChange();" >
												<option value="否">否</option>
												<option value="是">是</option>
											</select>
										</td>
									</tr>
									<tr>
										<td>可管理的组织单元:</td>
										<td>
											<input type="text" id="txtRoleUnits" readonly disable>
											<input class="jt_botton_table2" onclick="unitSelect1()" type="button" id="btnDot2" value="..." disabled/>
											<input type="hidden" id="txtUserAdminRoleValue" value>
										</td>
									</tr>
								</table>
							</form>
							</div>
						
							<div class="modal-footer" align="right">
								 <button id="roleSave" type="button"  class="btn btn-primary">保存</button>
								 <button type="button" data-dismiss="modal" class="btn btn-default">关闭</button>
							</div>
						</div>	
					</div> 
                </div>
            </div>
