<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="chinsoft.entity.Information" table="Information">
        <id name="ID" type="string">
            <column name="ID"/>
            <generator class="uuid.hex" />
        </id>
        <property name="Title" type="string">
            <column name="Title"/>
        </property>
        <property name="Content" type="text">
            <column name="Content"/>
        </property>
        <property name="ImageIDs" type="string">
            <column name="ImageIDs"/>
        </property>
        <property name="AttachmentIDs" type="string">
            <column name="AttachmentIDs"/>
        </property>
        <property name="PubMemberID" type="string">
            <column name="PubMemberID"/>
        </property>
        <property name="PubDate" type="date">
            <column name="PubDate"/>
        </property>
        <property name="AccessGroupIDs" type="string">
            <column name="AccessGroupIDs"/>
        </property>
        <property name="CategoryID" type="integer">
            <column name="CategoryID"/>
        </property>
        <property name="Views" type="integer">
            <column name="Views"/>
        </property>
        <property name="VersionID" type="integer">
            <column name="VersionID"/>
        </property>
    </class>
</hibernate-mapping>
