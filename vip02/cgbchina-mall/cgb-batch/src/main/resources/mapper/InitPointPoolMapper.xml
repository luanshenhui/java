<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="InitPointPool">
    <!--查出当月积分池中的数据-->
    <select id="findCurMonthRecord" parameterType="String" resultType="cn.com.cgbchina.batch.model.InitPointPoolModel">
        select
        max_point maxPoint,
        single_point singlePoint,
        point_rate pointRate
        from tbl_point_pool
        where del_flag = 0
        and cur_month = #{curMonth}
    </select>
    <!--查看积分池中是否存在下个月的数据-->
    <select id="findNextMonthRecord" parameterType="String" resultType="Integer">
        select
        count(1)
        from tbl_point_pool
        where cur_month = #{nextMonth} and del_flag = 0
    </select>
    <!--将下个月数据插入积分池中-->
    <insert id="createNextMonthRecord" parameterType="Map">
        insert into tbl_point_pool
        (cur_month
        ,max_point
        ,single_point
        ,point_rate
        ,used_point
        ,del_flag
        ,create_oper
        ,create_time)
        values(#{curMonth}
        ,#{maxPoint}
        ,#{singlePoint}
        ,#{pointRate}
        ,#{usedPoint}
        ,0
        ,#{createOper}
        ,#{createTime})
    </insert>
</mapper>


