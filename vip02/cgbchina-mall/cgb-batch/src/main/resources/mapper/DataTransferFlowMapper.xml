<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="DataTransferFlow">

    <select id="queryTblTransferRecordByIsException" parameterType="String" resultType="cn.com.cgbchina.batch.model.TblTransferRecordModel">
        select id,orgtablename,targertablename,begin_time,end_time,isexception,remard
        from tbl_transfer_record
        where ISEXCEPTION = #{isException}
        order by id desc
    </select>

    <select id="queryTblTransferRecordById" parameterType="Long" resultType="cn.com.cgbchina.batch.model.TblTransferRecordModel">
        select id,orgtablename,targertablename,begin_time,end_time,isexception,remard
        from tbl_transfer_record
        where id = #{id}
    </select>

    <update id="updateTblTransferRecord2" parameterType="cn.com.cgbchina.batch.model.TblTransferRecordModel">
        update tbl_transfer_record set begin_time = #{begin_time},isexception = #{isexception} where id = #{id}
    </update>

    <update id="updateTblTransferRecord" parameterType="cn.com.cgbchina.batch.model.TblTransferRecordModel">
        update tbl_transfer_record set end_time = #{end_time},isexception = #{isexception} where id = #{id}
    </update>

    <insert id="insertTblTransferRecord" parameterType="cn.com.cgbchina.batch.model.TblTransferRecordModel"
            useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        insert into tbl_transfer_record(orgtablename,targertablename,begin_time,end_time,isexception,remard)
        values(#{orgtablename},#{targertablename},#{begin_time},#{end_time},#{isexception},#{remard})
    </insert>

</mapper>
