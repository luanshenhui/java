<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">
       <context:component-scan base-package="com.spirit.common,com.spirit.web"/>
       <!-- AOP support -->
       <bean id="validator" class="org.springframework.validation.beanvalidation.LocalValidatorFactoryBean">
              <property name="validationMessageSource" ref="messageSources"/>
       </bean>

       <!-- redis配置 -->
       <import resource="classpath*:/spring/event-spirit-context.xml" />
       <import resource="mybatis-context-test.xml"/>
       <import resource="classpath*:/spring/redis-context.xml"/>
       <import resource="classpath*:/spring/generator-context.xml"/>
       <import resource="classpath*:/spring/rest-service-context.xml"/>
       <!-- service 注入 -->
       <import resource="classpath*:/spring/user-service-context.xml"/>
       <import resource="classpath*:/spring/item-service-context.xml"/>
       <import resource="classpath*:/spring/trade-service-context.xml"/>
       <import resource="classpath*:/spring/related-service-context.xml"/>
       <import resource="classpath*:/spring/promotion-service-context.xml"/>
       <import resource="classpath*:/spring/rest-service-context-test.xml"/>
       <import resource="classpath*:/spring/log-service-context.xml"/>

</beans>