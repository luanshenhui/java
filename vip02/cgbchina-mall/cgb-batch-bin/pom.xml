    <modelVersion>4.0.0</modelVersion>
    <artifactId>cgb-batch-bin</artifactId>
    <name>cgb-batch-bin</name>
    <url>http://maven.apache.org</url>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
