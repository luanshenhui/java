<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">

    <util:properties id="app" location="classpath:app.properties"/>
    <context:component-scan base-package="cn.com.cgbchina.user"/>
    <beans profile="sit,test,fuat,prod">
		<import resource="classpath*:/spring/rest-service-context.xml" />
	</beans>
    <beans profile="dev,test">
        <import resource="classpath*:/spring/rest-service-context-test.xml"/>
    </beans>
    <beans profile="fdev,fsit,fuat,prod">
        <import resource="classpath*:/spring/rest-service-context-real.xml"/>
    </beans>
    <beans profile="devTest">
    	<import resource="classpath*:/spring/rest-service-context-user-test.xml" />
        <import resource="classpath*:/spring/rest-service-context-real.xml"/>
        <import resource="classpath*:/spring/generator-context.xml"/>
        <import resource="classpath*:/spring/log-service-context.xml"/>
    </beans>
</beans>