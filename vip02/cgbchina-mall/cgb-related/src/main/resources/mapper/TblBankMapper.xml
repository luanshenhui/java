<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="TblBankModel">
    <resultMap id="TblBankMap" type="TblBankModel">
        <result property="id" column="id"/>
        <result property="code" column="code"/>
        <result property="name" column="name"/>
        <result property="bankCityNm" column="bank_city_nm"/>
        <result property="createOper" column="create_oper"/>
        <result property="createTime" column="create_time"/>
        <result property="modifyOper" column="modify_oper"/>
        <result property="modifyTime" column="modify_time"/>
        <result property="delFlag" column="del_flag"/>
    </resultMap>
    <sql id="columns">
    id,code,name,bank_city_nm,create_oper,create_time,modify_oper,modify_time,del_flag
    </sql>

    <insert id="insert" parameterType="TblBankModel" useGeneratedKeys="true"
            keyProperty="id" keyColumn="id">
        insert into tbl_bank
        (code
        ,name
        ,bank_city_nm
        ,del_flag
        ,create_oper
        ,create_time
        ,modify_oper
        ,modify_time)
        values(#{code}
        ,#{name}
        ,#{bankCityNm}
        ,0
        ,#{createOper}
        ,now()
        ,#{modifyOper}
        ,now())
    </insert>

    <update id="update" parameterType="TblBankModel">
        update tbl_bank set
            <if test="code !=null">code = #{code}
                ,</if>
            <if test="name !=null">name = #{name}
                ,</if>
            <if test="bankCityNm !=null">bank_city_nm = #{bankCityNm}
                ,</if>
            <if test="createOper !=null">create_oper = #{createOper}
                ,</if>
            <if test="createTime !=null">create_time = #{createTime}
                ,</if>
            <if test="modifyOper !=null">modify_oper = #{modifyOper}
                ,</if>
            modify_time = now()
        where id = #{id}
    </update>

    <sql id="conditions">
        where del_flag=0
        <if test="id !=null">and id = #{id}</if>
        <if test="code !=null">and code = #{code}</if>
        <if test="name !=null">and name = #{name}</if>
        <if test="bankCityNm !=null">and bank_city_nm = #{bankCityNm}</if>
        <if test="createOper !=null">and create_oper = #{createOper}</if>
        <if test="createTime !=null">and create_time = #{createTime}</if>
        <if test="modifyOper !=null">and modify_oper = #{modifyOper}</if>
        <if test="modifyTime !=null">and modify_time = #{modifyTime}</if>
    </sql>
    <select id="findById" parameterType="Map" resultMap="TblBankMap">
       select <include refid="columns"/>
        from tbl_bank
       where id=#{id}
    </select>
    <select id="findAll" resultMap="TblBankMap">
        select <include refid="columns"/>
        from tbl_bank
        <include refid="conditions"/>
    </select>

    <select id="pager" parameterType="Map" resultMap="TblBankMap">
        select <include refid="columns"/>
        from tbl_bank
        <include refid="conditions"/>
        <![CDATA[ order by id desc limit #{offset}, #{limit} ]]>
    </select>

    <!-- add by geshuo 20160801:查分页总数  -->
    <select id="count" parameterType="Map" resultType="Long">
        select count(1)
        from tbl_bank
        <include refid="conditions"/>
    </select>

    <delete id="delete" parameterType="TblBankModel">
        delete from tbl_bank where id = id
    </delete>

    <update id="deleteAll" parameterType="Map">
        update tbl_bank set
        del_flag = 1
        where id in
        <foreach collection="idList" item="item" index="index" open="(" separator="," close=")">
            #{item}
        </foreach>
    </update>

    <!-- add by geshuo 20160819: 根据参数查询分行列表 -->
    <select id="checkByCodeOrName" parameterType="Map" resultType="Integer">
        select count(1)
        from tbl_bank
        where del_flag = 0
        <if test="code != null">
            and code = #{code}
        </if>
        <if test="name != null">
            and name = #{name}
        </if>
        <if test="id != null">
            and id != #{id}
        </if>
    </select>

</mapper>


