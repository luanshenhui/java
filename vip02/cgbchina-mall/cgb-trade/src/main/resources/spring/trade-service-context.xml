<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:config.properties</value>
            </list>
        </property>
    </bean>

    <context:component-scan base-package="cn.com.cgbchina.trade"/>
    <import resource="classpath*:/spring/rest-service-context.xml"/>
    <beans profile="dev,test">
        <import resource="classpath*:/spring/rest-service-context-test.xml"/>
        <import resource="classpath*:/spring/ordermq.xml"/>
    </beans>
    <beans profile="fdev,fsit,fuat,prod">
        <import resource="classpath*:/spring/rest-service-context-real.xml"/>
    </beans>
    <beans profile="fdev,fsit,fuat,prod">
        <import resource="classpath*:spring/rest-dubbo-consumer.xml"/>
    </beans>

    <beans profile="dev,xcdev,test,fdev,prod">
        <bean class="cn.com.cgbchina.common.utils.SignAndVerify">
        	<property name="isSM2" value="true"></property>
        </bean>
    </beans>

    <beans profile="prod,fuat,fsit">
        <bean class="cn.com.cgbchina.common.utils.SignAndVerify">
        	<property name="isSM2" value="false"></property>
        </bean>
    </beans>

</beans>