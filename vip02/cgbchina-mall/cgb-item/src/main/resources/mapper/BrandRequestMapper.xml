<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="BrandRequest">
    <resultMap id="BrandRequestMap" type="BrandRequest">
        <result property="id" column="id"/>
        <result property="ordertypeId" column="ordertype_id"/>
        <result property="goodsBrandName" column="goods_brand_name"/>
        <result property="goodsBrand" column="goods_brand"/>
        <result property="brandImage" column="brand_image"/>
        <result property="brandAuthorizeImage" column="brand_authorize_image"/>
        <result property="vendorId" column="vendor_id"/>
        <result property="startTime" column="start_time"/>
        <result property="endTime" column="end_time"/>
        <result property="approveMemo" column="approve_memo"/>
        <result property="approveState" column="approve_state"/>
        <result property="createOper" column="create_oper"/>
        <result property="createTime" column="create_time"/>
        <result property="modifyOper" column="modify_oper"/>
        <result property="modifyTime" column="modify_time"/>
    </resultMap>
    <sql id="columns">
        id,ordertype_id,goods_brand_name,goods_brand,brand_image,brand_authorize_image,vendor_id,start_time,end_time,approve_memo,approve_state,create_oper,create_time,modify_oper,modify_time
    </sql>

    <insert id="insert" parameterType="BrandRequest" useGeneratedKeys="true"
            keyProperty="id" keyColumn="id">
        insert into brand_request
        (ordertype_id
        ,goods_brand_name
        ,goods_brand
        ,brand_image
        ,brand_authorize_image
        ,vendor_id
        ,start_time
        ,end_time
        ,approve_memo
        ,approve_state
        ,create_oper
        ,create_time
        ,modify_oper
        ,modify_time)
        values(#{ordertypeId}
        ,#{goodsBrandName}
        ,#{goodsBrand}
        ,#{brandImage}
        ,#{brandAuthorizeImage}
        ,#{vendorId}
        ,#{startTime}
        ,#{endTime}
        ,#{approveMemo}
        ,#{approveState}
        ,#{createOper}
        ,#{createTime}
        ,#{modifyOper}
        ,#{modifyTime})
    </insert>

    <update id="update" parameterType="BrandRequest">
        update brand_request set
        ordertype_id
        = #{ordertypeId},goods_brand_name
        = #{goodsBrandName},goods_brand
        = #{goodsBrand},brand_image
        = #{brandImage},brand_authorize_image
        = #{brandAuthorizeImage},vendor_id
        = #{vendorId},start_time
        = #{startTime},end_time
        = #{endTime},approve_memo
        = #{approveMemo},approve_state
        = #{approveState},create_oper
        = #{createOper},create_time
        = #{createTime},modify_oper
        = #{modifyOper},modify_time
        = #{modifyTime}
        where id = #{id}
    </update>

    <sql id="conditions">
        <where>
            <if test="id !=null">and id = #{id}</if>
            <if test="ordertypeId !=null">and ordertypeId = #{ordertypeId}</if>
            <if test="goodsBrandName !=null">and goodsBrandName = #{goodsBrandName}</if>
            <if test="goodsBrand !=null">and goodsBrand = #{goodsBrand}</if>
            <if test="brandImage !=null">and brandImage = #{brandImage}</if>
            <if test="brandAuthorizeImage !=null">and brandAuthorizeImage = #{brandAuthorizeImage}</if>
            <if test="vendorId !=null">and vendorId = #{vendorId}</if>
            <if test="startTime !=null">and startTime = #{startTime}</if>
            <if test="endTime !=null">and endTime = #{endTime}</if>
            <if test="approveMemo !=null">and approveMemo = #{approveMemo}</if>
            <if test="approveState !=null">and approveState = #{approveState}</if>
            <if test="createOper !=null">and createOper = #{createOper}</if>
            <if test="createTime !=null">and createTime = #{createTime}</if>
            <if test="modifyOper !=null">and modifyOper = #{modifyOper}</if>
            <if test="modifyTime !=null">and modifyTime = #{modifyTime}</if>
        </where>
    </sql>
    <select id="findById" parameterType="Map" resultMap="BrandRequestMap">
        SELECT id,
        <include refid="columns"/>
        from brand_request
        where id=#{id}
    </select>
    <select id="findAll" resultMap="BrandRequestMap">
        select id,
        <include refid="columns"/>
        from brand_request
        <include refid="conditions"/>
    </select>

    <select id="pager" parameterType="Map" resultMap="BrandRequestMap">
        select id,
        <include refid="columns"/>
        from brand_request
        <include refid="conditions"/>
        <![CDATA[ order by id desc limit #{offset}, #{limit} ]]>
    </select>
    <delete id="delete" parameterType="BrandRequest">
        delete from brand_request where id = id
    </delete>
</mapper>


