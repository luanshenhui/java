<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="GoodsPriceRegionModel">
    <resultMap id="GoodsPriceRegionMap" type="GoodsPriceRegionModel">
        <result property="regionId" column="region_id"/>
        <result property="minPoint" column="min_point"/>
        <result property="maxPoint" column="max_point"/>
        <result property="delFlag" column="del_flag"/>
        <result property="createOper" column="create_oper"/>
        <result property="createTime" column="create_time"/>
        <result property="modifyOper" column="modify_oper"/>
        <result property="modifyTime" column="modify_time"/>
    </resultMap>
    <sql id="columns">
    region_id,min_point,max_point,del_flag,create_oper,create_time,modify_oper,modify_time
    </sql>

    <insert id="insert" parameterType="GoodsPriceRegionModel" useGeneratedKeys="true"
            keyProperty="regionId" keyColumn="region_id">
        insert into tbl_goods_price_region
        (min_point
        ,max_point
        ,del_flag
        ,create_oper
        ,create_time
        ,modify_oper
        ,modify_time)
        values(#{minPoint}
        ,#{maxPoint}
        ,#{delFlag}
        ,#{createOper}
        ,#{createTime}
        ,#{modifyOper}
        ,#{modifyTime})
    </insert>

    <update id="update" parameterType="GoodsPriceRegionModel">
        update tbl_goods_price_region set
            <if test="minPoint !=null">min_point = #{minPoint}
                ,</if>
            <if test="maxPoint !=null">max_point = #{maxPoint}
                ,</if>
            <if test="delFlag !=null">del_flag = #{delFlag}
                ,</if>
            <if test="createOper !=null">create_oper = #{createOper}
                ,</if>
            <if test="createTime !=null">create_time = #{createTime}
                ,</if>
            <if test="modifyOper !=null">modify_oper = #{modifyOper}
                ,</if>
            <if test="modifyTime !=null">modify_time = #{modifyTime}
                </if>
        where region_id = #{regionId}
    </update>

    <sql id="conditions">
        <where>
            <if test="regionId !=null">and region_id = #{regionId}</if>
            <if test="minPoint !=null">and min_point = #{minPoint}</if>
            <if test="maxPoint !=null">and max_point = #{maxPoint}</if>
            <if test="delFlag !=null">and del_flag = #{delFlag}</if>
            <if test="createOper !=null">and create_oper = #{createOper}</if>
            <if test="createTime !=null">and create_time = #{createTime}</if>
            <if test="modifyOper !=null">and modify_oper = #{modifyOper}</if>
            <if test="modifyTime !=null">and modify_time = #{modifyTime}</if>
        </where>
    </sql>
    <select id="findById" parameterType="Map" resultMap="GoodsPriceRegionMap">
       SELECT region_id,
        <include refid="columns"/>
        from tbl_goods_price_region
       where region_id=#{regionId}
    </select>
    <select id="findAll" resultMap="GoodsPriceRegionMap">
        select region_id,
        <include refid="columns"/>
        from tbl_goods_price_region
        <include refid="conditions"/>
    </select>

    <select id="pager" parameterType="Map" resultMap="GoodsPriceRegionMap">
        select region_id,
        <include refid="columns"/>
        from tbl_goods_price_region
        <include refid="conditions"/>
        <![CDATA[ order by region_id desc limit #{offset}, #{limit} ]]>
    </select>
    <delete id="delete" parameterType="GoodsPriceRegionModel">
        delete from tbl_goods_price_region where region_id = regionId
    </delete>

    <select id="findGoodsPriceRegionList" resultMap="GoodsPriceRegionMap">
        select region_id,
        <include refid="columns"/>
        from tbl_goods_price_region
        <include refid="conditions"/>
        where del_flag=0
    </select>
</mapper>


