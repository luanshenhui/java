{{#component "points_pool js-component"}}
    <p class="components-title"><strong>- 积分池设置 -</strong></p>
    <div class="tab-contents">
        <div data-role="content" class="tab-content">
            <form class="form item-form-search form-inline">
                <fieldset>
                    <p class="filter-name">
                        <span class="span4 span-large">
                            <label for="curMonth">月份:</label>
                            <input type="text" name="curMonth" value="{{curMonth}}" class="form-control"/>
                        </span>
                        <span class="span1 span-large">
                        <label for="example" class="font-color-gray">(例如:201601)</label>
                        </span>
                        <span class="span2 span-large">
                        </span>
                        <span class="span4 span-large">
                            <input class="btn btn-success btn-small margin-right-0 float-right" type="submit"
                                   value="查询"/>
                        </span>
                    </p>
                </fieldset>
            </form>
            <div class="add-new m-b-10">
                {{#authorial "pointsPool_add"}}
                    <button class="btn btn-info btn-small js-pool-new">+ 新增</button>
                {{/authorial}}
            </div>
            <table class="table">
                <thead>
                <tr>
                    <th width="10%">月份</th>
                    <th width="18%">当月最高积分</th>
                    <th width="18%">积分兑换价格</th>
                    <th width="18%">积分最高支付比例</th>
                    <th width="18%">已使用积分</th>
                    <th width="18%">操作</th>
                </tr>
                </thead>
                <tbody>
                {{#each _DATA_.data}}
                    <tr data-component="" data-id="{{id}}" data-data="{{json this}}">
                        <td class="curMonth">{{curMonth}}</td>
                        <td class="maxPoint">{{maxPoint}}</td>
                        <td class="singlePoint">{{singlePoint}}</td>
                        <td class="pointRate">{{pointRate}}</td>
                        <td class=usedPoint">{{usedPoint}}</td>
                        {{#equals 1 flag}}
                            <td>
                                {{#authorial "pointsPool_delete"}}
                                    <button id="{{id}}" class="btn btn-info btn-sm js-pool-delete" data-toggle="confirm"
                                            data-title="您确定删除吗?" data-content="删除之后无法恢复,确定要删除吗？"
                                            data-event="confirm:delete-pool">
                                        删除
                                    </button>
                                {{/authorial}}
                            </td>
                        {{else}}
                            <td>
                                {{#authorial "pointsPool_edit"}}
                                    <button class="btn btn-info btn-sm js-pool-edit" data-flag="{{flag}}">编辑</button>
                                {{/authorial}}
                            </td>
                        {{/equals}}
                    </tr>
                {{/each}}
                </tbody>
            </table>
            {{#equals _DATA_.total "0"}}
                <span class="search-none">没有符合条件的信息，请尝试其他搜索条件。</span>
            {{else}}
                <div class="pagination" data-total="{{_DATA_.total}}"></div>
            {{/equals}}
        </div>
    </div>

{{/component}}