{{#component "coupon_inf js-component"}}
    <p class="components-title"><strong>- 优惠券管理 -</strong></p>
    <div class="tab-contents">
        <div data-role="content" class="tab-content">
            <form class="form coupon-form-search form-inline">
                <fieldset>
                    <p class="filter-name">
                        <span class="span4 span-large">
                            <label for="couponId">优惠券编号:</label>
                            <input type="text" name="couponId" value="{{couponId}}" class="form-control"/>
                        </span>
                        <span class="span4 span-large">
                            <label for="couponNm">优惠券名称:</label>
                            <input type="text" class="form-control" name="couponNm" value="{{couponNm}}">
                        </span>
                        <span class="span3 span-large">
                            <button class="btn btn-success btn-small" type="submit">查询</button>
                        </span>
                    </p>
                </fieldset>
            </form>
            {{#authorial "coupon_get"}}
                <div class="m-b-10">
                    <button class="btn btn-info btn-small js-coupon-get">获 取</button>
                    </button>
                </div>
            {{/authorial}}
    {{#equals _DATA_.total "0"}}
            <span class="search-none">没有符合条件的信息，请尝试其他搜索条件。</span>
    {{else}}
            <table class="table">
                <thead>
                <tr>
                    <th width="10%">优惠券编号</th>
                    <th width="10%">优惠券名称</th>
                    <th width="10%">使用后台类目</th>
                    <th width="10%">使用供应商</th>
                    <th width="10%">使用品牌</th>
                    <th width="10%">使用商品</th>
                    <th width="8%">是否领取范围设定</th>
                    <th width="8%">是否开启首次登录</th>
                    <th width="14%">有效日期</th>
                    <th width="10%">操作</th>
                </tr>
                </thead>
                <tbody>
                {{#each _DATA_.data}}
                    <tr data-component="" class="js-coupon-set" data-id="{{id}}" data-data="{{json this}}">
                        <td class="coupon_id" title="{{couponId}}">{{couponId}}</td>
                        <td class="coupon_nm" title="{{couponNm}}">{{couponNm}}</td>
                        {{#if backCategoryNm}}
                            <td class="back_category_nm" title="{{backCategoryNm}}">{{backCategoryNm}}</td>
                            <td class="vendor_nms" title="{{vendorNms}}">{{vendorNms}}</td>
                            <td class="brand_name" title="{{brandName}}">{{brandName}}</td>
                            <td class="goods_name" title="{{goodsName}}">{{goodsName}}</td>
                        {{else}}
                            {{#if vendorNms}}
                                <td class="back_category_nm" title="{{backCategoryNm}}">{{backCategoryNm}}</td>
                                <td class="vendor_nms" title="{{vendorNms}}">{{vendorNms}}</td>
                                <td class="brand_name" title="{{brandName}}">{{brandName}}</td>
                                <td class="goods_name" title="{{goodsName}}">{{goodsName}}</td>
                            {{else}}
                                {{#if brandName}}
                                    <td class="back_category_nm" title="{{backCategoryNm}}">{{backCategoryNm}}</td>
                                    <td class="vendor_nms" title="{{vendorNms}}">{{vendorNms}}</td>
                                    <td class="brand_name" title="{{brandName}}">{{brandName}}</td>
                                    <td class="goods_name" title="{{goodsName}}">{{goodsName}}</td>
                                {{else}}
                                    {{#if goodsName}}
                                        <td class="back_category_nm" title="{{backCategoryNm}}">{{backCategoryNm}}</td>
                                        <td class="vendor_nms" title="{{vendorNms}}">{{vendorNms}}</td>
                                        <td class="brand_name" title="{{brandName}}">{{brandName}}</td>
                                        <td class="goods_name" title="{{goodsName}}">{{goodsName}}</td>
                                    {{else}}
                                        <td class="back_category_nm" title="全场">全场</td>
                                        <td class="vendor_nms" title="全场">全场</td>
                                        <td class="brand_name" title="全场">全场</td>
                                        <td class="goods_name" title="全场">全场</td>
                                    {{/if}}
                                {{/if}}
                            {{/if}}
                        {{/if}}


                        <td class="is_manual">
                            {{#equals "0" isManual}}
                                否
                            {{else}}
                                是
                            {{/equals}}
                        </td>
                        <td class="is_firstlogin">
                            {{#equals "0" isFirstlogin}}
                                否
                            {{else}}
                                是
                            {{/equals}}
                        </td>
                        <td class="start_time" title="{{#equals "1" isManual}}{{formatDate startTime "day"}}-{{formatDate endTime "day"}}{{else}}{{#equals "1" isFirstlogin}}{{formatDate startTime "day"}}-{{formatDate endTime "day"}}{{/equals}}{{/equals}}">
                            {{#equals "1" isManual}}
                                {{formatDate startTime "day"}}-{{formatDate endTime "day"}}
                            {{else}}
                                {{#equals "1" isFirstlogin}}
                                    {{formatDate startTime "day"}}-{{formatDate endTime "day"}}
                                {{/equals}}
                            {{/equals}}
                        </td>
                        <td class="edit-button">
                            {{#authorial "coupon_set"}}
                                <button class="btn btn-sm btn-info js-a-href">设置</button>
                            {{/authorial}}
                        </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        {{/equals}}
            <div class="pagination" data-total="{{_DATA_.total}}"></div>
        </div>
    </div>
{{/component}}