<div class="components js-component operation-platform" data-comp-path="components_config"
     data-sites="/admins/components" data-id="">
    <p class="components-title"><strong>- 组件配置 -</strong> </p>
    <div class="add-component">
        {{#authorial "component_add"}}
            <button class="btn btn-info btn-small js-component-new">新建组件</button>
        {{/authorial}}
    </div>
    <table class="components-config table table-horizontal center-text" data="{{_DATA_}}">
        <thead>
        <tr>
            <th width="5%">序号</th>
            <th width="10%">所属类目</th>
            <th width="10%">组件名</th>
            <th width="10%">组件描述</th>
            <th width="20%">路径</th>
            <th width="30%">api</th>
            <th width="15%">操作</th>
        </tr>
        </thead>
        <tbody>
        {{#each _DATA_}}
            <tr data-component=""  data-id="{{id}}" data-data="{{json this}}">
                <td class="component-id">{{id}}</td>
                <td class="component-category-id">{{componentCategory}}</td>
                <td class="component-name">{{name}}</td>
                <td class="component-desc">{{description}}</td>
                <td class="component-path">{{path}}</td>
                <td class="component-api left-text">{{api}}</td>
                <td>
                    {{#authorial "component_edit"}}
                        <button class="btn btn-info btn-sm js-component-edit">编辑</button>
                    {{/authorial}}
                    {{#authorial "component_delete"}}
                        <button id="{{id}}" class="btn btn-info btn-sm js-component-delete" data-toggle="confirm"
                                data-title="您确定删除吗?" data-content="删除之后无法恢复,确定要删除吗？" data-event="confirm:delete-component">
                            删除
                        </button>
                    {{/authorial}}
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>
