{{#component "html-upload js-component" }}
    <link href="/static/umeditor/themes/default/css/umeditor.css" type="text/css" rel="stylesheet">
    <p class="components-title js-html-title" data-id="{{ordertypeId}}"><strong>- 静态页面管理 -</strong></p>
    <div class="m-b-10">
        <form id="form-search" class="form">
            <fieldset>
                <p class="filter-name">
                    <span class="span4">
                        <label for="actId">静态页面代码:</label>
                        <input id="actId" type="text" name="actId" class="search-account search-input"
                               value="{{actId}}" maxlength="20">
                    </span>
                    <span class="span4">
                        <label for="actName">页面名称:</label>
                        <input id="actName" type="text" name="actName" class="search-account search-input"
                               value="{{actName}}" maxlength="30">
                    </span>
                    <span class="span4">
                        <label for="oper">上传者:</label>
                        <select id="oper" type="text" name="oper" class="search-account search-input">
                            <option value="" {{#equals oper ""}}selected{{/equals}}>请选择</option>
                            <option value="0" {{#equals oper "0"}}selected{{/equals}}>内管</option>
                            <option value="1" {{#equals oper "1"}}selected{{/equals}}>供应商</option>
                        </select>
                    </span>
                </p>
                <p class="filter-name">

                <span class="span4">
                    <label for="pageType">页面类型:</label>
                    <select id="pageType" type="text" name="pageType" class="search-account search-input">
                        <option value="" {{#equals pageType ""}}selected{{/equals}}>请选择</option>
                        <option value="05" {{#equals pageType "05"}}selected{{/equals}}>商城预留页</option>
                        <option value="04" {{#equals pageType "04"}}selected{{/equals}}>APP预留页</option>
                    </select>
                </span>
                </p>
                <input class="btn btn-success btn-small margin-right-0 pull-right" type="submit" value="查询"/>
            </fieldset>
        </form>
        <div class="btn-group add-html">
            {{#equals ordertypeId "YG"}}
                {{#authorial "htmlUpload_add"}}
                    <button class="btn btn-info btn-small js-html-new">新建</button>
                {{/authorial}}
            {{/equals}}
            {{#equals ordertypeId "JF"}}
                {{#authorial "pointHtmlUpload_add"}}
                    <button class="btn btn-info btn-small js-html-new">新建</button>
                {{/authorial}}
            {{/equals}}

        </div>
    </div>
    <table class="table">
        <thead>
        <tr>
            <th width="10%">静态页面代码</th>
            <th width="8%">页面类型</th>
            <th width="8%">页面代码</th>
            <th width="8%">页面名称</th>
            <th width="8%">上传者</th>
            <th width="10%">文件名称</th>
            <th width="10%">发布状态</th>
            <th width="26%">页面信息</th>
            <th width="19%">操作</th>
        </tr>
        </thead>
        <tbody>
        {{#each _DATA_.data}}
            <tr data-component="" data-data="{{json this}}">
                {{#equals pageType "05"}}
                    <td class="html-act-id">{{actId}}</td>
                    <td>商城预留页</td>
                    <td>{{pageId}}</td>
                    <td>{{actName}}</td>
                    <td>{{simpleName}}</td>
                    <td>{{actFilename}}</td>
                    <td>{{#equals publishStatus "00"}}已发布{{/equals}}
                        {{#equals publishStatus "01"}}等待发布{{/equals}}
                        {{#equals publishStatus "02"}}等待审核{{/equals}}
                        {{#equals publishStatus "03"}}发布失败{{/equals}}
                        {{#equals publishStatus "21"}}发布中{{/equals}}
                        {{#equals publishStatus "40"}}审核拒绝{{/equals}}
