                                {{#authorial "pointHtmlUpload_assignStatPage"}}
                                    <button class="btn btn-sm btn-info js-html-for">指派</button>
                                {{/authorial}}
                            {{/equals}}
                        {{/equals}}
                        <!--待上传-->
                        {{#equals publishStatus "50"}}
                            {{#if vendorId}}
                            {{else}}
                                {{#equals ordertypeId "YG"}}
                                    {{#authorial "htmlUpload_upload"}}
                                        <button class="btn btn-sm btn-info js-html-update">上传</button>
                                    {{/authorial}}
                                {{/equals}}
                                {{#equals ordertypeId "JF"}}
                                    {{#authorial "pointHtmlUpload_upload"}}
