                    <td class="text-left"><p>开始时间：{{#formatDate startTime}}{{/formatDate}}</p>

                        <p>结束时间：{{#formatDate endTime}}{{/formatDate}}</p>
                        {{#equals  publishStatus "00"}}
                            <p>浏览路径：{{_HREF_.htmlPublishUrl}}{{browsePath}}</p>
                        {{else}}
                            <p>浏览路径：-</p>
                        {{/equals}}
                    </td>
                    <td>
                        <button class="btn btn-sm btn-info js-html-look"
                            {{#equals publishStatus "00"}}
                                data-url="{{_HREF_.htmlPublishUrl}}{{browsePath}}"
                            {{else}}
                                data-url="{{_HREF_.htmlUrl}}{{browsePath}}"
                            {{/equals}}>预览
                        </button>

                        <!--删除-->
                        {{#equals ordertypeId "YG"}}
                            {{#authorial "htmlDel_announcement"}}
                                <button class="btn btn-sm btn-info js-html-del" id="{{actId}}" data-toggle="confirm"
                                        data-title="删除" data-content="您确定要删除该静态页面吗?" data-event="confirm:del-html">
                                    删除
                                </button>
                            {{/authorial}}
                        {{else}}
                            {{#authorial "pointHtmlDel_announcement"}}
                                <button class="btn btn-sm btn-info js-html-del" id="{{actId}}" data-toggle="confirm"
                                        data-title="删除" data-content="您确定要删除该静态页面吗?" data-event="confirm:del-html">
                                    删除
                                </button>
                            {{/authorial}}
                        {{/equals}}
                        {{#equals publishStatus "00"}}
                            {{#if vendorId}}
                            {{else}}
                                {{#equals ordertypeId "YG"}}
                                    {{#authorial "htmlUpload_upload"}}
                                        <button class="btn btn-sm btn-info js-html-update">上传</button>
                                    {{/authorial}}
                                {{/equals}}
                                {{#equals ordertypeId "JF"}}
                                    {{#authorial "pointHtmlUpload_upload"}}
                                        <button class="btn btn-sm btn-info js-html-update">上传</button>
                                    {{/authorial}}
                                {{/equals}}
                            {{/if}}
                        {{/equals}}
                        {{#equals publishStatus "02"}}
                            {{#authorial "htmlUpload_audit"}}
                                <button class="btn btn-sm btn-info js-html-pass" id="{{actId}}" data-toggle="confirm"
                                        data-title="通过" data-content="您确定要通过该静态页面吗?" data-event="confirm:pass-html">
                                    通过
                                </button>
                            {{/authorial}}
                            {{#authorial "htmlUpload_audit"}}
                                <button class="btn btn-sm btn-info js-html-refuse" id="{{actId}}" data-toggle="confirm"
                                        data-title="拒绝" data-content="您确定要拒绝该静态页面吗?" data-event="confirm:refuse-html">
                                    拒绝
                                </button>
                            {{/authorial}}
                        {{/equals}}
                        {{#equals publishStatus "03"}}
