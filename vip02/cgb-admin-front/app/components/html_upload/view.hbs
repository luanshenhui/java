                            {{#equals ordertypeId "YG"}}
                                {{#authorial "htmlUpload_announcement"}}
                                    <button class="btn btn-sm btn-info js-html-push" id="{{actId}}"
                                            data-toggle="confirm"
                                            data-title="发布" data-content="您确定要发布该静态页面吗?" data-event="confirm:push-html">
                                        发布
                                    </button>
