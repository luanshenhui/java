                                {{/authorial}}
                            {{/equals}}
                            {{#equals ordertypeId "YG"}}
                                {{#authorial "htmlUpload_assignStatPage"}}
                                    <button class="btn btn-sm btn-info js-html-for">指派</button>
                                {{/authorial}}
                            {{/equals}}
                            {{#equals ordertypeId "JF"}}
                                {{#authorial "pointHtmlUpload_assignStatPage"}}
