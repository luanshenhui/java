<div class="popup-dialog {{rootStyle}}">
  <div class="popup-dialog-title">
    <h3>{{title}}</h3>
  </div>
  <div class="popup-dialog-content">
    {{{content}}}
  </div>
  {{#unless noControl}}
  <div class="popup-dialog-footer">
    {{#equals type "confirm"}}
      <button class="btn btn-success btn-small js-btn-ok">{{#if confirm}}{{confirm}}{{else}}确定{{/if}}</button><button class="btn btn-success btn-small js-btn-cancel">{{#if cancel}}{{cancel}}{{else}}取消{{/if}}</button>
    {{else}}
      <button class="btn btn-success btn-small js-btn-cancel">{{#if cancel}}{{cancel}}{{else}}确定{{/if}}</button>
    {{/equals}}
  </div>
  {{/unless}}
</div>
