<div class="modal">
    <div class="modal-header">
        <a href="#" class="close">×</a>
        <h2>站点配置</h2>
    </div>
    <form class="form form-aligned sites-form" sites-id="{{data.id}}">
        <div class="modal-dialog">
            <div class="sites-new">
                <div class="control-group">
                    <label for="sites-name"><span class="required">*</span>站点名称:</label>
                    <input id="sites-id" name="name" type="text" placeholder="请输入站点名称" value="{{data.name}}" required
                           maxlength="10">
                    <span class="note"><i>&times;</i> 必填 不得为空</span>
                    <span class="note-error-empty"><i>&times;</i> 必填 不得为空</span>
                </div>
                <div class="control-group">
                    <label for="site-domain"><span class="required">*</span>二级域名:</label>
                    {{#if edit}}{{data.subdomain}} {{else}}
                        <input id="site-domain" name="subDomain" type="text" class="input-small"
                               value="shop" maxlength="6" readonly required>
                    {{/if}}
                    .{{domain}}&nbsp;&nbsp;&nbsp;&nbsp;
                    <span class="note"><i>&times;</i> 必填 不得为空</span>
                    <span class="note-error-empty"><i>&times;</i> 必填 不得为空</span>
                </div>
                <div class="control-group">
                    <label for="context"><span class="required">*</span>二级目录:</label>
                    {{#if edit}}{{data.context}} {{else}}
                        <select class="select input " name="context" required>
                            <option value="cgbmall" selected="selected">广发商城
                            </option>
                            <option value="integrate" {{#equals data.context "integrate"}}selected{{/equals}}>积分商城
                            </option>
                        </select>
                    {{/if}}
                    <span class="note"><i>&times;</i> 必填 不得为空</span>
                    <span class="note-error-empty"><i>&times;</i> 必填 不得为空</span>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-small btn-success" type="submit">确定</button>
            <button class="btn btn-small close" type="button">取消</button>
        </div>
    </form>
</div>
