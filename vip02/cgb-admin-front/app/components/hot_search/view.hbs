{{#component "terms js-component"}}
    <p class="components-title"><strong>热搜词管理</strong></p>
    <div class="main-box">
        <form method="get" class="form term-form-search form-inline">
            <fieldset>
                <p class="filter-name">
                    <span class="span4 span-large">
                        <label for="termName">热搜词名称：</label>
                        <input type="text" class="control-group js-terms-name" id="termName" name="termName"
                               value="{{termName}}">
                    </span>
                    <button class="btn btn-success btn-small margin-right-10 pull-right" type="submit">查询</button>
                </p>
            </fieldset>
        </form>
        {{#authorial "hotSearch_add"}}
            <div>
                <button class="btn btn-info btn-small js-terms-new">新增</button>
            </div>
        {{/authorial}}
    </div>

    <div class="main-box-table m-t-10">
        <table class="table">
            <thead>
            <th width="25%">热搜词名称</th>
            <th width="25%">排序</th>
            <th width="25%">状态</th>
            <th width="25%">操作</th>
            </thead>
            <tbody>
            {{#if _DATA_.data}}
                {{#each _DATA_.data}}
                <tr data-component="" data-id="{{name}}" data-data="{{json this}}">
                    <td>{{name}}</td>
                    <td>{{sort}}</td>
                    <td>{{#equals status "0"}}开启{{/equals}}{{#equals status "1"}}关闭{{/equals}}</td>
                    <td>
                        {{#authorial "hotSearch_edit"}}
                            <button class="btn btn-info btn-small js-terms-edit">编辑</button>
                        {{/authorial}}
                        {{#authorial "hotSearch_delete"}}
                            <button id="{{name}}" class="btn btn-info btn-small js-item-delete" data-toggle="confirm"
                                    data-title="您确定删除吗?" data-content="删除之后无法恢复,确定要删除吗？"
                                    data-event="confirm:delete-item">
                                删除
                            </button>
                        {{/authorial}}
                    </td>
                </tr>
            {{/each}}
            {{else}}
                <table width="100%" border="0" cellspacing="0" cellpadding="0"
                       class="list-tabble-con table-list margin-bottom-20">
                    <tr>
                        <td>
                            <p class="non-existent">没有符合条件的信息，请尝试其他搜索条件。</p>
                        </td>
                    </tr>
                </table>
            {{/if}}
            </tbody>
        </table>
        <div class="pagination" data-total={{_DATA_.total}}>
        </div>
    </div>

{{/component}}