<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="OrderOutSystemModel">
    <resultMap id="OrderOutSystemMap" type="OrderOutSystemModel">
        <result property="id" column="id"/>
        <result property="orderMainId" column="order_main_id"/>
        <result property="orderId" column="order_id"/>
        <result property="times" column="times"/>
        <result property="tuisongFlag" column="tuisong_flag"/>
        <result property="systemRole" column="system_role"/>
        <result property="createOper" column="create_oper"/>
        <result property="createTime" column="create_time"/>
        <result property="modifyOper" column="modify_oper"/>
        <result property="modifyTime" column="modify_time"/>
    </resultMap>
    <sql id="columns">
    id,order_main_id,order_id,times,tuisong_flag,system_role,create_oper,create_time,modify_oper,modify_time
    </sql>

    <insert id="insert" parameterType="OrderOutSystemModel" useGeneratedKeys="true"
            keyProperty="id" keyColumn="id">
        insert into tbl_order_outsystem
        (order_main_id
        ,order_id
        ,times
        ,tuisong_flag
        ,system_role
        ,create_oper
        ,create_time
        ,modify_oper
        ,modify_time)
        values(#{orderMainId}
        ,#{orderId}
        ,#{times}
        ,#{tuisongFlag}
        ,#{systemRole}
        ,#{createOper}
        ,now()
        ,#{modifyOper}
        ,#{modifyTime})
    </insert>

    <update id="update" parameterType="OrderOutSystemModel">
        update tbl_order_outsystem set
            <if test="orderMainId !=null">order_main_id = #{orderMainId}
                ,</if>
            <if test="orderId !=null">order_id = #{orderId}
                ,</if>
            <if test="times !=null">times = #{times}
                ,</if>
            <if test="tuisongFlag !=null">tuisong_flag = #{tuisongFlag}
                ,</if>
            <if test="systemRole !=null">system_role = #{systemRole}
                ,</if>
            <if test="createOper !=null">create_oper = #{createOper}
                ,</if>
            <if test="createTime !=null">create_time = #{createTime}
                ,</if>
            <if test="modifyOper !=null">modify_oper = #{modifyOper}
                ,</if>
            <if test="modifyTime !=null">modify_time = #{modifyTime}
                </if>
        where id = #{id}
    </update>

    <sql id="conditions">
        <where>
            <if test="id !=null">and id = #{id}</if>
            <if test="orderMainId !=null">and order_main_id = #{orderMainId}</if>
            <if test="orderId !=null">and order_id = #{orderId}</if>
            <if test="times !=null">and times = #{times}</if>
            <if test="tuisongFlag !=null">and tuisong_flag = #{tuisongFlag}</if>
            <if test="systemRole !=null">and system_role = #{systemRole}</if>
            <if test="createOper !=null">and create_oper = #{createOper}</if>
            <if test="createTime !=null">and create_time = #{createTime}</if>
            <if test="modifyOper !=null">and modify_oper = #{modifyOper}</if>
            <if test="modifyTime !=null">and modify_time = #{modifyTime}</if>
        </where>
    </sql>
    <select id="findById" parameterType="Map" resultMap="OrderOutSystemMap">
       SELECT id,
        <include refid="columns"/>
        from tbl_order_outsystem
       where id=#{id}
    </select>
    <select id="findAll" resultMap="OrderOutSystemMap">
        select id,
        <include refid="columns"/>
        from tbl_order_outsystem
        <include refid="conditions"/>
    </select>

    <select id="pager" parameterType="Map" resultMap="OrderOutSystemMap">
        select id,
        <include refid="columns"/>
        from tbl_order_outsystem
        <include refid="conditions"/>
        <![CDATA[ order by id desc limit #{offset}, #{limit} ]]>
    </select>
    <delete id="delete" parameterType="OrderOutSystemModel">
        delete from tbl_order_outsystem where id = id
    </delete>
</mapper>


