<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="AuctionQuestionInfModel">
    <resultMap id="AuctionQuestionInfMap" type="AuctionQuestionInfModel">
        <result property="id" column="id"/>
        <result property="type" column="type"/>
        <result property="name" column="name"/>
        <result property="linkUrl" column="link_url"/>
        <result property="delFlag" column="del_flag"/>
        <result property="createOper" column="create_oper"/>
        <result property="createTime" column="create_time"/>
        <result property="modifyOper" column="modify_oper"/>
        <result property="modifyTime" column="modify_time"/>
    </resultMap>
    <sql id="columns">
        id,type,name,link_url,del_flag,create_oper,create_time,modify_oper,modify_time
    </sql>

    <insert id="insert" parameterType="AuctionQuestionInfModel" useGeneratedKeys="true"
            keyProperty="id" keyColumn="id">
        insert into tbl_auction_question_inf
        (type
        ,name
        ,link_url
        ,del_flag
        ,create_oper
        ,create_time
        ,modify_oper
        ,modify_time)
        values(#{type}
        ,#{name}
        ,#{linkUrl}
        ,0
        ,#{createOper}
        ,now()
        ,#{modifyOper}
        ,now())
    </insert>

    <update id="update" parameterType="AuctionQuestionInfModel">
        update tbl_auction_question_inf set
        <if test="type !=null">type = #{type}
            ,
        </if>
        <if test="name !=null">name = #{name}
            ,
        </if>
        <if test="linkUrl !=null">link_url = #{linkUrl}
            ,
        </if>
        <if test="delFlag !=null">del_flag = #{delFlag}
            ,
        </if>
        <if test="modifyOper !=null">modify_oper = #{modifyOper}
            ,
        </if>
        modify_time = now()
        where id = #{id}
    </update>

    <sql id="conditions">
        <where>
            <if test="id !=null">and id = #{id}</if>
            <if test="type !=null">and type = #{type}</if>
            <if test="name !=null">and name = #{name}</if>
            <if test="linkUrl !=null">and link_url = #{linkUrl}</if>
            <if test="delFlag !=null">and del_flag = #{delFlag}</if>
            <if test="createOper !=null">and create_oper = #{createOper}</if>
            <if test="createTime !=null">and create_time = #{createTime}</if>
            <if test="modifyOper !=null">and modify_oper = #{modifyOper}</if>
            <if test="modifyTime !=null">and modify_time = #{modifyTime}</if>
        </where>
    </sql>
    <select id="findById" parameterType="Map" resultMap="AuctionQuestionInfMap">
        SELECT id,
        <include refid="columns"/>
        from tbl_auction_question_inf
        where id=#{id}
    </select>
    <select id="findAll" resultMap="AuctionQuestionInfMap">
        select id,
        <include refid="columns"/>
        from tbl_auction_question_inf
        <include refid="conditions"/>
    </select>

    <!--查询行数-->
    <select id="count" resultType="Long">
        select count(1)
        from tbl_auction_question_inf
        where del_flag = 0
        <if test="linkUrl !=null">and link_url like concat(concat('%',#{linkUrl}),'%')</if>
        <if test="type !=null">and type = #{type}</if>
    </select>

    <select id="pager" parameterType="Map" resultMap="AuctionQuestionInfMap">
        select id,
        <include refid="columns"/>
        from tbl_auction_question_inf
        where del_flag = 0
        <if test="linkUrl !=null">and link_url like concat(concat('%',#{linkUrl}),'%')</if>
        <if test="type !=null">and type = #{type}</if>
        <![CDATA[ order by id desc limit #{offset}, #{limit} ]]>
    </select>
    <delete id="delete" parameterType="AuctionQuestionInfModel">
        delete from tbl_auction_question_inf where id = id
    </delete>

    <update id="updateDelFlag" parameterType="Long">
        update tbl_auction_question_inf set
        del_flag = 1,
        modify_time = now()
        where id = #{id}
    </update>

    <select id="findLinkUrl" parameterType="String" resultType="Integer">
        select count(*) from tbl_auction_question_inf
        where del_flag = 0 and link_url = #{linkUrl}
    </select>

</mapper>


