<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="DefaultSearch">
    <resultMap id="DefaultSearchModelMap" type="DefaultSearchModel">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="status" column="status"/>
        <result property="delFlag" column="del_flag"/>
        <result property="createOper" column="create_oper"/>
        <result property="createTime" column="create_time"/>
        <result property="modifyOper" column="modify_oper"/>
        <result property="modifyTime" column="modify_time"/>
    </resultMap>
    <sql id="columns">
        id,name,status,del_flag,create_oper,create_time,modify_oper,modify_time
    </sql>

    <insert id="insert" parameterType="DefaultSearchModel" useGeneratedKeys="true"
            keyProperty="id" keyColumn="id">
        insert into tbl_default_search
        (name
        ,status
        ,del_flag
        ,create_oper
        ,create_time
        )
        values(#{name}
        ,#{status}
        ,0
        ,#{createOper}
        ,now()
        )
    </insert>

    <update id="update" parameterType="DefaultSearchModel">
        update tbl_default_search set
        name
        = #{name},status
        = #{status},del_flag
        = 0,modify_oper
        = #{modifyOper},modify_time
        = now()
        where id = #{id}
    </update>
    <update id="todelete" parameterType="DefaultSearchModel">
        update tbl_default_search set
        del_flag
        = 1,modify_oper
        = #{modifyOper},modify_time
        = now()
        where id = #{id}
    </update>

    <sql id="conditions">
        <where>
            del_flag = 0
            <if test="id !=null">and id = #{id}</if>
            <if test="name !=null">and name LIKE concat(concat('%',#{name}),'%')</if>
            <if test="status !=null">and status = #{status}</if>
            <if test="createOper !=null">and create_oper = #{createOper}</if>
            <if test="createTime !=null">and create_time = #{createTime}</if>
            <if test="modifyOper !=null">and modify_oper = #{modifyOper}</if>
            <if test="modifyTime !=null">and modify_time = #{modifyTime}</if>
        </where>
    </sql>
    <select id="findById" parameterType="Map" resultMap="DefaultSearchModelMap">
        SELECT id,
        <include refid="columns"/>
        from tbl_default_search
        where id=#{id}
    </select>
    <select id="findAll" resultMap="DefaultSearchModelMap">
        select id,
        <include refid="columns"/>
        from tbl_default_search
        <include refid="conditions"/>
    </select>

    <select id="findDefaultHeader" resultMap="DefaultSearchModelMap">
        select id,
        <include refid="columns"/>
        from tbl_default_search
        <include refid="conditions"/>
        limit #{limit}
    </select>

    <select id="count" resultType="Long">
        select count(1)
        from tbl_default_search
        <include refid="conditions"/>
    </select>
    <select id="pager" parameterType="Map" resultMap="DefaultSearchModelMap">
        select id,
        <include refid="columns"/>
        from tbl_default_search
        <include refid="conditions"/>
        <![CDATA[ order by id desc limit #{offset}, #{limit} ]]>
    </select>
    <delete id="delete" parameterType="DefaultSearchModel">
        delete from tbl_default_search where id = id
    </delete>

    <select id="findNameByName" parameterType="String" resultType="Long">
        select count(1)
        from tbl_default_search
        where name = #{name}
    </select>

    <select id="countAll" parameterType="Map" resultType="Integer">
        SELECT count(1) from tbl_default_search
        WHERE del_flag = 0
        <if test="termName != null">
            and name=#{termName}
        </if>
    </select>

    <select id="countTo" parameterType="Map" resultType="Integer">
        SELECT count(1) from tbl_default_search
        WHERE del_flag != 1
        <if test="termName != null">
            and `name`=#{termName}
        </if>
        and id != #{id}
    </select>
</mapper>


