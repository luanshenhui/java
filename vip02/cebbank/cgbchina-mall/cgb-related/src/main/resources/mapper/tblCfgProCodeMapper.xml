<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="TblCfgProCodeModel">
    <resultMap id="TblCfgProCodeMap" type="TblCfgProCodeModel">
        <result property="id" column="id"/>
        <result property="ordertypeId" column="ordertype_id"/>
        <result property="proType" column="pro_type"/>
        <result property="proCode" column="pro_code"/>
        <result property="proPri" column="pro_pri"/>
        <result property="proNm" column="pro_nm"/>
        <result property="proDesc" column="pro_desc"/>
        <result property="createOper" column="create_oper"/>
        <result property="createTime" column="create_time"/>
        <result property="modifyOper" column="modify_oper"/>
        <result property="modifyTime" column="modify_time"/>
    </resultMap>
    <sql id="columns">
    id,ordertype_id,pro_type,pro_code,pro_pri,pro_nm,pro_desc,create_oper,create_time,modify_oper,modify_time
    </sql>

    <insert id="insert" parameterType="TblCfgProCodeModel" useGeneratedKeys="true"
            keyProperty="id" keyColumn="id">
        insert into tbl_cfg_procode
        (ordertype_id
        ,pro_type
        ,pro_code
        ,pro_pri
        ,pro_nm
        ,pro_desc
        ,create_oper
        ,create_time
        ,modify_oper
        ,modify_time)
        values(#{ordertypeId}
        ,#{proType}
        ,#{proCode}
        ,#{proPri}
        ,#{proNm}
        ,#{proDesc}
        ,#{createOper}
        ,#{createTime}
        ,#{modifyOper}
        ,#{modifyTime})
    </insert>

    <update id="update" parameterType="TblCfgProCodeModel">
        update tbl_cfg_procode set
            <if test="ordertypeId !=null">ordertype_id = #{ordertypeId}
                ,</if>
            <if test="proType !=null">pro_type = #{proType}
                ,</if>
            <if test="proCode !=null">pro_code = #{proCode}
                ,</if>
            <if test="proPri !=null">pro_pri = #{proPri}
                ,</if>
            <if test="proNm !=null">pro_nm = #{proNm}
                ,</if>
            <if test="proDesc !=null">pro_desc = #{proDesc}
                ,</if>
            <if test="createOper !=null">create_oper = #{createOper}
                ,</if>
            <if test="createTime !=null">create_time = #{createTime}
                ,</if>
            <if test="modifyOper !=null">modify_oper = #{modifyOper}
                ,</if>
            <if test="modifyTime !=null">modify_time = #{modifyTime}
                </if>
        where id = #{id}
    </update>

    <sql id="conditions">
        <where>
            <if test="id !=null">and id = #{id}</if>
            <if test="ordertypeId !=null">and ordertype_id = #{ordertypeId}</if>
            <if test="proType !=null">and pro_type = #{proType}</if>
            <if test="proCode !=null">and pro_code = #{proCode}</if>
            <if test="proPri !=null">and pro_pri = #{proPri}</if>
            <if test="proNm !=null">and pro_nm = #{proNm}</if>
            <if test="proDesc !=null">and pro_desc = #{proDesc}</if>
            <if test="createOper !=null">and create_oper = #{createOper}</if>
            <if test="createTime !=null">and create_time = #{createTime}</if>
            <if test="modifyOper !=null">and modify_oper = #{modifyOper}</if>
            <if test="modifyTime !=null">and modify_time = #{modifyTime}</if>
        </where>
    </sql>
    <select id="findById" parameterType="Map" resultMap="TblCfgProCodeMap">
       SELECT id,
        <include refid="columns"/>
        from tbl_cfg_procode
       where id=#{id}
    </select>
    <select id="findAll" resultMap="TblCfgProCodeMap">
        select id,
        <include refid="columns"/>
        from tbl_cfg_procode
        <include refid="conditions"/>
    </select>

    <select id="pager" parameterType="Map" resultMap="TblCfgProCodeMap">
        select id,
        <include refid="columns"/>
        from tbl_cfg_procode
        <include refid="conditions"/>
        <![CDATA[ order by id desc limit #{offset}, #{limit} ]]>
    </select>
    <delete id="delete" parameterType="TblCfgProCodeModel">
        delete from tbl_cfg_procode where id = id
    </delete>
    <select id="findProCodeInfo" resultMap="TblCfgProCodeMap">
        select pro_pri,pro_nm,pro_desc
        from tbl_cfg_procode
       where ordertype_id='YG' and pro_type='BM' and pro_code='big_machine'
    </select>
</mapper>


