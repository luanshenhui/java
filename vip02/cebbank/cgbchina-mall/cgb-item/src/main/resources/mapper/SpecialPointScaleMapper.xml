<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="SpecialPointScaleModel">
    <resultMap id="SpecialPointScaleMap" type="SpecialPointScaleModel">
        <result property="id" column="id"/>
        <result property="scale" column="scale"/>
        <result property="type" column="type"/>
        <result property="typeVal" column="type_val"/>
        <result property="delFlag" column="del_flag"/>
        <result property="createOper" column="create_oper"/>
        <result property="createTime" column="create_time"/>
        <result property="modifyOper" column="modify_oper"/>
        <result property="modifyTime" column="modify_time"/>
        <result property="typeId" column="type_id"/>
    </resultMap>
    <sql id="columns">
        id,scale,type,type_val,del_flag,create_oper,create_time,modify_oper,modify_time,type_id
    </sql>

    <insert id="insert" parameterType="SpecialPointScaleModel" useGeneratedKeys="true"
            keyProperty="id" keyColumn="id">
        insert into tbl_special_point_scale
        (scale
        ,type
        ,type_val
        ,del_flag
        ,create_oper
        ,create_time
        ,modify_oper
        ,modify_time
        ,type_id)
        values(#{scale}
        ,#{type}
        ,#{typeVal}
        ,0
        ,#{createOper}
        ,now()
        ,#{modifyOper}
        ,#{modifyTime}
        ,#{typeId})

    </insert>

    <update id="update" parameterType="SpecialPointScaleModel">
        update tbl_special_point_scale set
        <if test="scale !=null">scale = #{scale}
            ,
        </if>
        <if test="type !=null">type = #{type}
            ,
        </if>
        <if test="typeVal !=null">type_val = #{typeVal}
            ,
        </if>
        <if test="delFlag !=null">del_flag = #{delFlag}
            ,
        </if>
        <if test="createOper !=null">create_oper = #{createOper}
            ,
        </if>
        <if test="createTime !=null">create_time = #{createTime}
            ,
        </if>
        <if test="modifyOper !=null">modify_oper = #{modifyOper}
            ,
        </if>
        <if test="modifyTime !=null">modify_time = #{modifyTime}
            ,
        </if>
        <if test="typeId !=null">type_id = #{typeId}
        </if>
        where id = #{id}
    </update>

    <sql id="conditions">
        <where>
            <if test="id !=null">and id = #{id}</if>
            <if test="scale !=null">and scale = #{scale}</if>
            <if test="type !=null">and type = #{type}</if>
            <if test="typeVal !=null">and type_val = #{typeVal}</if>
            and del_flag = 0
            <if test="createOper !=null">and create_oper = #{createOper}</if>
            <if test="createTime !=null">and create_time = #{createTime}</if>
            <if test="modifyOper !=null">and modify_oper = #{modifyOper}</if>
            <if test="modifyTime !=null">and modify_time = #{modifyTime}</if>
            <if test="typeId !=null">type_id = #{typeId}</if>
        </where>
    </sql>
    <select id="findById" parameterType="Map" resultMap="SpecialPointScaleMap">
        SELECT id,
        <include refid="columns"/>
        from tbl_special_point_scale
        where id=#{id}
    </select>
    <select id="findAll" resultMap="SpecialPointScaleMap">
        select id,
        <include refid="columns"/>
        from tbl_special_point_scale
        <include refid="conditions"/>
    </select>

    <select id="pager" parameterType="Map" resultMap="SpecialPointScaleMap">
        select id,
        <include refid="columns"/>
        from tbl_special_point_scale
        <include refid="conditions"/>
        <![CDATA[ order by id desc limit #{offset}, #{limit} ]]>
    </select>
    <delete id="delete" parameterType="SpecialPointScaleModel">
        update tbl_special_point_scale
        set
        del_flag = 1
        where id = #{id}
    </delete>
    <select id="count" resultType="Long">
        select count(1)
        from tbl_special_point_scale
        <include refid="conditions"/>
    </select>


    <!--批量删除 add by yuxinxin-->
    <update id="deleteAll" parameterType="Map">
        update tbl_special_point_scale set
        del_flag = 1
        where id IN
        <foreach collection="idList" item="item" index="index" open="(" separator="," close=")">
            #{item}
        </foreach>
    </update>

    <!--typeVal唯一性校验-->
    <select id="typeValCheck" parameterType="SpecialPointScaleModel" resultMap="SpecialPointScaleMap">
        select id,
        <include refid="columns"/>
        from tbl_special_point_scale
        where type=#{type} and type_id=#{typeId} and del_flag = '0'
    </select>

    <!--根据type和typeId进行更新-->
    <update id="updateByTypeId" parameterType="SpecialPointScaleModel">
        update tbl_special_point_scale set
        <if test="scale !=null">scale = #{scale}
            ,
        </if>
        <if test="modifyOper !=null">modify_oper = #{modifyOper}
            ,
        </if>
        modify_time = now()
        where type =#{type} and type_id=#{typeId} and del_flag = '0'
    </update>

    <!--根据id更新-->
    <update id="updateById" parameterType="SpecialPointScaleModel">
        update tbl_special_point_scale set
        <if test="scale !=null">scale = #{scale}
            ,
        </if>
        <if test="modifyOper !=null">modify_oper = #{modifyOper}
            ,
        </if>
        modify_time = now()
        where id=#{id}
    </update>
</mapper>


