<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="CouponScaleModel">
    <resultMap id="CouponScaleMap" type="CouponScaleModel">
        <result property="id" column="id"/>
        <result property="type" column="type"/>
        <result property="scale" column="scale"/>
        <result property="creatOper" column="create_oper"/>
        <result property="createTime" column="create_time"/>
        <result property="modifyOper" column="modify_oper"/>
        <result property="modifyTime" column="modify_time"/>
        <result property="delFlag" column="del_flag"/>
    </resultMap>
    <sql id="columns">
        id,type,scale,create_oper,create_time,modify_oper,modify_time,del_flag
    </sql>

    <insert id="insert" parameterType="CouponScaleModel" useGeneratedKeys="true"
            keyProperty="id" keyColumn="id">
        insert into tbl_coupon_scale
        (type
        ,scale
        ,create_oper
        ,create_time
        ,modify_oper
        ,modify_time
        ,del_flag)
        values(#{type}
        ,#{scale}
        ,#{creatOper}
        ,#{createTime}
        ,#{modifyOper}
        ,#{modifyTime}
        ,#{delFlag})
    </insert>

    <update id="update" parameterType="CouponScaleModel">
        update tbl_coupon_scale set
        <if test="scale !=null">scale = #{scale}
            ,
        </if>
        <if test="modifyOper !=null">modify_oper = #{modifyOper}
            ,
        </if>
        modify_time = now()
        where type = #{type}
    </update>

    <sql id="conditions">
        <where>
            del_flag = '0'
            <if test="id !=null">and id = #{id}</if>
            <if test="type !=null">and type = #{type}</if>
            <if test="scale !=null">and scale = #{scale}</if>
            <if test="creatOper !=null">and create_oper = #{creatOper}</if>
            <if test="createTime !=null">and create_time = #{createTime}</if>
            <if test="modifyOper !=null">and modify_oper = #{modifyOper}</if>
            <if test="modifyTime !=null">and modify_time = #{modifyTime}</if>
        </where>
    </sql>
    <select id="findById" parameterType="Map" resultMap="CouponScaleMap">
        SELECT id,
        <include refid="columns"/>
        from tbl_coupon_scale
        where id=#{id}
    </select>
    <select id="findAll" resultMap="CouponScaleMap">
        select id,
        <include refid="columns"/>
        from tbl_coupon_scale
        <include refid="conditions"/>
    </select>

    <select id="pager" parameterType="Map" resultMap="CouponScaleMap">
        select id,
        <include refid="columns"/>
        from tbl_coupon_scale
        <include refid="conditions"/>
        <![CDATA[ order by id desc limit #{offset}, #{limit} ]]>
    </select>
    <delete id="delete" parameterType="CouponScaleModel">
        delete from tbl_coupon_scale where id = id
    </delete>
    <select id="getBirthScale" resultMap="CouponScaleMap">
        SELECT id,
        <include refid="columns"/>
        from tbl_coupon_scale
        where type in ('3','4')
    </select>
</mapper>


