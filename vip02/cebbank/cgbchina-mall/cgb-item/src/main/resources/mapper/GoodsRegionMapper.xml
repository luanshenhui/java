<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="GoodsRegionModel">
    <resultMap id="GoodsRegionMap" type="GoodsRegionModel">
        <result property="id" column="id"/>
        <result property="code" column="code"/>
        <result property="name" column="name"/>
        <result property="pointsType" column="points_type"/>
        <result property="limitCards" column="limit_cards"/>
        <result property="status" column="status"/>
        <result property="publishStatus" column="publish_status"/>
        <result property="sort" column="sort"/>
        <result property="memo" column="memo"/>
        <result property="delFlag" column="del_flag"/>
        <result property="createOper" column="create_oper"/>
        <result property="createTime" column="create_time"/>
        <result property="modifyOper" column="modify_oper"/>
        <result property="modifyTime" column="modify_time"/>
    </resultMap>
    <sql id="columns">
    id,code,name,points_type,limit_cards,status,publish_status,sort,memo,del_flag,create_oper,create_time,modify_oper,modify_time
    </sql>

    <insert id="insert" parameterType="GoodsRegionModel" useGeneratedKeys="true"
            keyProperty="id" keyColumn="id">
        insert into tbl_goods_region
        (code
        ,name
        ,points_type
        ,limit_cards
        ,status
        ,publish_status
        ,sort
        ,memo
        ,del_flag
        ,create_oper
        ,create_time
        ,modify_oper
        ,modify_time)
        values(#{code}
        ,#{name}
        ,#{pointsType}
        ,#{limitCards}
        ,#{status}
        ,#{publishStatus}
        ,#{sort}
        ,#{memo}
        ,#{delFlag}
        ,#{createOper}
        ,now()
        ,#{modifyOper}
        ,now())
    </insert>

    <update id="update" parameterType="GoodsRegionModel">
        update tbl_goods_region set
        <if test="code !=null">code = #{code}
            ,
        </if>
        <if test="name !=null">name = #{name}
            ,
        </if>
        <if test="pointsType !=null">points_type = #{pointsType}
            ,
        </if>
        <if test="limitCards !=null">limit_cards = #{limitCards}
            ,
        </if>
        <if test="status !=null">status = #{status}
            ,
        </if>
        <if test="publishStatus !=null">publish_status = #{publishStatus}
            ,
        </if>
        <if test="sort !=null">sort = #{sort}
            ,
        </if>
        <if test="memo !=null">memo = #{memo}
            ,
        </if>
        <if test="delFlag !=null">del_flag = 0
            ,
        </if>
        <if test="createOper !=null">create_oper = #{createOper}
            ,
        </if>
        <if test="createTime !=null">create_time = #{createTime}
            ,
        </if>
        <if test="modifyOper !=null">modify_oper = #{modifyOper}
            ,
        </if>
        modify_time = now()
        where id = #{id}
    </update>

    <sql id="conditions">
        <where>
            <if test="id !=null">and id = #{id}</if>
            <if test="code !=null">and code = #{code}</if>
            <if test="name !=null">and name = #{name}</if>
            <if test="pointsType !=null">and points_type = #{pointsType}</if>
            <if test="limitCards !=null">and limit_cards = #{limitCards}</if>
            <if test="status !=null">and status = #{status}</if>
            <if test="publishStatus !=null">and publish_status = #{publishStatus}</if>
            <if test="sort !=null">and sort = #{sort}</if>
            <if test="memo !=null">and memo = #{memo}</if>
            <if test="delFlag !=null">and del_flag = #{delFlag}</if>
            <if test="createOper !=null">and create_oper = #{createOper}</if>
            <if test="createTime !=null">and create_time = #{createTime}</if>
            <if test="modifyOper !=null">and modify_oper = #{modifyOper}</if>
            <if test="modifyTime !=null">and modify_time = #{modifyTime}</if>
        </where>
    </sql>
    <select id="findById" parameterType="Map" resultMap="GoodsRegionMap">
        SELECT
        <include refid="columns"/>
        from tbl_goods_region
        where id=#{id}
    </select>

    <select id="findAll" resultMap="GoodsRegionMap">
        select
        <include refid="columns"/>
        from tbl_goods_region
        <include refid="conditions"/>
    </select>
    <!--礼品分区条件查询-->
    <sql id="pageConditions">
        <where>
            del_flag = 0
            <if test="id !=null">and id = #{id}</if>
            <if test="code !=null">
                AND code = #{code}
            </if>
            <if test="name !=null">AND name LIKE concat(concat('%',#{name}),'%')</if>
            <if test="pointsType !=null">and points_type = #{pointsType}</if>
            <if test="limitCards !=null">and limit_cards = #{limitCards}</if>
            <if test="status !=null">and status = #{status}</if>
            <if test="publishStatus !=null">and publish_status = #{publishStatus}</if>
            <if test="sort !=null">and sort = #{sort}</if>
            <if test="memo !=null">and memo = #{memo}</if>
            <if test="delFlag !=null">and del_flag = #{delFlag}</if>
            <if test="createOper !=null">and create_oper = #{createOper}</if>
            <if test="createTime !=null">and create_time = #{createTime}</if>
            <if test="modifyOper !=null">and modify_oper = #{modifyOper}</if>
            <if test="modifyTime !=null">and modify_time = #{modifyTime}</if>
        </where>
    </sql>
    <select id="pager" parameterType="Map" resultMap="GoodsRegionMap">
        select
        <include refid="columns"/>
        from tbl_goods_region
        <include refid="pageConditions"/>
        <![CDATA[ order by sort ASC limit #{offset}, #{limit} ]]>
    </select>
    <!--分页时用的总数-->
    <select id="pageCount" resultType="Long">
        select count(1)
        from tbl_goods_region
        <include refid="pageConditions"/>
    </select>

    <delete id="delete" parameterType="GoodsRegionModel">
        update tbl_goods_region
        set
        del_flag = 1,
        modify_oper = #{modifyOper},
        modify_time = now()
        where id = #{id}
    </delete>

    <!--总数count-->
    <select id="count" resultType="Long">
        select count(1)
        from tbl_goods_region
        WHERE
        <include refid="conditions"/>
    </select>
    <!--检验分区名称是否重复 -->
    <select id="checkGiftPartition" parameterType="String" resultType="Long">
        select count(1)
        from tbl_goods_region
        where name = #{name} and del_flag = 0
    </select>
    <!--检验分区code是否重复 -->
    <select id="checkPartitionCode" parameterType="String" resultType="Long">
        select count(1)
        from tbl_goods_region
        where code= #{code} and del_flag = 0
    </select>
    <!--校验sort是否重复-->
    <select id="checkPartitionSort" parameterType="Integer" resultType="Long">
        select count(1)
        from tbl_goods_region
        where sort = #{sort} and del_flag = 0
    </select>
</mapper>


