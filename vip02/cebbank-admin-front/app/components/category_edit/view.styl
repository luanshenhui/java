.edit-panel{
  .input-spu-name{
    text-align: left;
    input.input-large{
      width: 295px !important;
    }
  }
  &.disable{
    display: none;
  }
  position: absolute;
  right:0;
  display: block;
  height: 100%;
  overflow: auto;
  width: 408px;
  border-left: 1px solid #EEEEEE;
  border-right: 1px solid #EEEEEE;
  .search-item{
    position: relative;
    float: right;
    .icon-fdj12{
      position: absolute;
      left: 2px;
      top: 8px;
    }
    .search-item-input{
      padding-left: 15px;
    }
  }
  .tab-content{
    padding: 0 .5em 0 .5em;
    >*{
      display: none;
    }
    >*.active{
      display: block;
    }
    #edit-category{
      ul{
        position: relative;
        li{
          border-bottom: 1px dashed #EEEEEE;
          line-height: 40px;
          &:hover{
            span.operate.on-hover{
              display: inline-block;
              vertical-align: middle;
              span{
                a{
                  text-align: left;
                }
              }
            }
            span.end{
              display: none;
            }
          }
          span.attribute{
            width: 170px;
            display: inline-block;
            vertical-align: middle;
            span.attr{
              display: inline-block;
              vertical-align: middle;
              width: 100px;
              text-overflow: ellipsis;
              overflow: hidden;
              white-space: nowrap;
            }
            span.is-enum{
              width: 60px;
              display: inline-block;
              vertical-align: middle;
            }
          }
          span.end{
            position: absolute;
            right:.5em;

          }
          span.operate.on-hover{
            position: absolute;
            display: none;
            right:5px;
          }
          span.operate.edit-status{
            position: absolute;
            right: .5em;
          }
          span.only-delete{
            padding: 9px 0 0 0;
            display: inline-block;
            vertical-align: middle;
          }

          .disable-status{
            display: none !important;
          }
          .active-status{
            display: inline-block !important;
          }
        }
      }
      .add-attr-li{
        height: 34px;
        padding: 6px 0 0 0;
      }
      .properties-edit{
        padding: 0 .5em;
        form{
          padding-top: 0;
        }
        .title-label{
          margin-left: 12px;
        }
        ul{
          list-style: none;
          margin-left: 10px;
          li{
            border-bottom: 0px;
            line-height: 35px;
            input{
              &[readOnly=true]{
                background-color: #fff;
              }
              &.attribute-show{
                width: 142px;
              }
              &.update-category-input{
                width: 92px;
              }
            }
          }
          .button-group{
            text-align: left;
            margin-bottom: 20px;
          }
        }
      }
      .properties-edit-panel{
        padding: 0 .5em;
        .properties-edit-ul{
          list-style: none;
          margin-top: 5px;
          margin-left: 10px;
          width: 160px;
          li{
            border-bottom: 0px;
            line-height: 25px;
            .attribute-value{
              color: #565656;
              font-weight: bold;
              text-align: left;
            }
          }
        }
      }

      .properties-edit-form{
        height: 35px;
        .input-group{
          width: 160px;
          margin: 4px 0 0 0;
          width: 160px;
          text-align: left;
          line-height: 28px;
          span{
            display: inline-block;
            vertical-align: baseline;
          }


        }
      }
      .add-attribute-form{
        .input-group{
          width: 140px;
          line-height: 28px;
        }
      }
    }

    #spu-manage{
      position: relative;
      .caret{
        margin-top: 3px;
      }
      .dropdown-group{
        width:90px;
        height: 24px;
        display: inline-block;
        vertical-align: middle;
        background: #CCCCCC;
        padding: 3px 5px;
        .dropdown-title{
          padding-left: 0;
          padding-right: 0;
          width: 90px;
          position: absolute;
          .spu-operate-item{
            padding-top: 10px;
          }
        }
        .dropdown-menu {
          background: #CCCCCC;
        }
      }
      ul{
        &.spu-list{
          margin-bottom: 60px;
        }
        li{
          position: relative;
          border-bottom: 1px dashed #EEEEEE;
          line-height: 40px;

          span.spu-name{
            display: inline-block;
            vertical-align: middle;
            width: 100px;
            text-overflow: ellipsis;
            overflow: hidden;
            white-space: nowrap;

            // position: relative;
            // z-index: 90;
          }
          span.spu-status{
            display: inline;
          }
          span.operate.on-hover{
            position: absolute;
            right:0;
          }
          span.spu-id{
            display: inline-block;
            vertical-align: middle;
          }
        }
      }
      .properties-edit-panel{
        ul{
          margin-top: 5px;
          list-style: none;
          li{
            border-bottom: 0px;
            line-height: 25px;
            .attribute-value{
              color: #000000;
              font-weight: bold;
            }
          }
        }
      }
      .key-name{
        width: 100%;
        .attribute-seller-value{
          float: left;
          width: 100%;
          display: inline-block;
          vertical-align: middle;
          white-space: nowrap;
          overflow: hidden;
          text-overflow: ellipsis;
        }
      }
      .spu-new{
        height: auto;
        table{
          margin: 2px 5px;
          select{
            width: 100px;
            &.select{
              width: 172px;
            }
          }
          tr{
            vertical-align: middle;
            &.spu-property-list{
              position: relative;
              .tip{
                position: absolute;
                &.up{
                  left: 50px;
                  margin-top: 40px;
                }
              }
            }
          }
          .search-brand{
            display: inline-block;
            vertical-align: middle;
          }
          .search-brand-group{
            position: relative;
            i{
              position: absolute;
              top: 8px;
              left: 5px;
              color: #CCCCCC;
            }
            input{
              width: 100px;
              padding-left: 25px;
            }
          }
          table-layout: fixed;
          th.spu-name, .spu-attr{
            width: 60px;
            height: 40px;
          }
          th.spu-attr{
            vertical-align: top;
            line-height: 40px;
          }
          th.select-spu-brand{
            text-align: left;
          }
          td{
            height: 40px;
            width: 102px;
            vertical-align: middle;
            input{
              display: inline;
              vertical-align: middle;
              &[type="text"]{
                width: 190px;
              }
            }
            &.spu-attribute{
              span{
                width: 80px;
                /**display: inline-block;*/
                font-size:12px;
                vertical-align: middle;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
                vertical-align: middle;
                &:hover{
                  overflow: visible;
                }
              }
            }
            &.spu-sku{
              width: 100px;
              span{
                font-size: 12px;
              }
            }
            &.operate-button-group{
              width: 180px;
              display: inline-block;
              vertical-align: middle;
            }
          }
        }
      }
      .span-active{
        color: #f01919;
        font-weight: bold;
      }
    }
  }
  form{
    .form-group{
      width: 100%;
      display: inline-block;
      vertical-align: middle;
      margin-bottom: 10px;
    }
    .form-desc{
      display: inline-block;
      vertical-align: middle;
      width: 20%;
      height: 100%;
      vertical-align: middle;
    }
    .update-category-input{
      display: inline-block;
      vertical-align: middle;
      width: 70px;
    }
    .form-line{
      line-height: 28px;
      display: block;
    }
    .form-part{
      display: inline-block;
      vertical-align: middle;
      margin-right: 1em;
    }
  }
}

span.input-icon{
  position: relative;
  display: inline-block;
  vertical-align: middle;
  width: 160px;
  i.input-right{
    font-size: 14px;
    position: absolute;
    right: .8em;
    top:.7em;
    cursor: pointer;
  }
  i.input-left{
    position: absolute;
    left: 1em;
    top: 1.2em;
    cursor: pointer;
    &:hover{
      padding:1px;
      border: 1px #EEEEEE solid;
    }
  }
}

ul{
  list-style: none;

  &.tab{
    margin-top: 10px;
    margin: 0px;
    display: block;
    height: 40px;
    border-bottom: 1px solid #EEEEEE;
    background-color:#ffffff;
    margin-bottom: 5px;
    li{
      float: left;
      margin-left: -1px;
      text-align: center;
      line-height: 40px;
      width: 115px;
      .switch-panel{
        // color: $menu-title-label-color;
      }
      &.active{
        font-weight: bold;
        border:1px solid #EEEEEE;
        border-bottom: none;
        background-color: #ffffff;
        .switch-panel{
          color: #565656;
        }
      }
    }
  }
}

.menu-panel.left{
  z-index:90;
  position:absolute;
  background-color: #ffffff;
  border:1px solid;
  border-color:#EEEEEE;
  left:0; top: 0;
  height:auto; width:100%;
}
.menu-panel.left::before{
  content:""; /*需要有内容,这里是一个空字符串*/
  position:absolute; /*相对于弹出层定位*/
  border:6px solid;
  border-color:transparent #EEEEEE transparent transparent;
  left:-13px; top:10px; /*相对于盒子边框定位三角形*/
  height:0px; width:0px; /*收缩边框创造三角形*/
}
.menu-panel.left::after{
  content:""; /*需要有内容,这里是一个空字符串*/
  position:absolute; /*相对于弹出层定位*/
  border:6px solid;
  border-color:transparent #ffffff transparent transparent;
  left:-12px; top:10px; /*相对于盒子边框定位三角形*/
  height:0px; width:0px; /*收缩边框创造三角形*/
}
.menu-panel.top{
  z-index: 100;
  position:absolute;
  border:1px solid;
  background-color: #ffffff;
  border-color:#EEEEEE;
  left:0; top: 0;
  height:auto; width:100%;
}
.menu-panel.top::before{
  content:""; /*需要有内容,这里是一个空字符串*/
  position:absolute; /*相对于弹出层定位*/
  border:6px solid;
  border-color:transparent transparent #EEEEEE transparent;
  left:10px; top:-12px; /*相对于盒子边框定位三角形*/
  height:0px; width:0px; /*收缩边框创造三角形*/
}
.menu-panel.top::after{
  content:""; /*需要有内容,这里是一个空字符串*/
  position:absolute; /*相对于弹出层定位*/
  border:6px solid;
  border-color:transparent transparent #ffffff transparent;
  left:10px; top:-11px; /*相对于盒子边框定位三角形*/
  height:0px; width:0px; /*收缩边框创造三角形*/
}
