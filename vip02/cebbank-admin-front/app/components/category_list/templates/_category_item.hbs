<li class="divide-li" data-category="{{json this}}" id="{{id}}">
    <div class="normal-status">
        <div class="operate-span">
            <i title="编辑" class="operate-status js-edit-category fa fa-pencil-square-o"></i>
            {{#equals hasChild false}}
                <i id="{{json this}}" data-categoryid="{{this.id}}" title="删除"
                                          class="operate-status js-delete-category fa fa-trash-o" data-toggle="confirm"
                                          data-title="您确定删除吗?" data-content="删除之后无法恢复,确定要删除吗？"
                                          data-event="confirm:delete-category"></i>{{/equals}}
        </div>
        {{#equals hasChild true}}<i class="fa fa-angle-right next"></i><i
                class="fa fa-angle-right next hide"></i>{{/equals}}
        {{#equals ../extras.type 1}}
            <a class="image-upload" href="javascript:void(0);" title="上传图标">
                {{#if icon}}
                    <img src="{{icon}}_15x15.jpg" height="15px" width="15px" title="图标">
                {{else}}
                    <i class="fa fa-picture-o"></i>
                {{/if}}
            </a>
        {{/equals}}
        <a href="javascript:void(0);" class="item-pop" title="{{name}}"><span>{{name}}</span></a>

    </div>
    <form class="form category-edit-form update-category-group" style="display: none;"
          onkeydown="if(event.keyCode==13){return false;}">
        <div class="input-group input-group-append">
            <input type="text" class="update-category-input group-input" name="name" maxlength="8">
            <span class="input-group-btn">
          <button class="btn btn-success btn-small js-update-category" type="button">修改</button>
        </span>
        </div>
    </form>
</li>

