<!DOCTYPE HTML>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
<title>UploadiFive Test</title>
<script src="/uploadify/jquery-1.4.2.min.js" type="text/javascript"></script>
<script src="/uploadify/jquery.uploadify.v2.1.4.js" type="text/javascript"></script>
<script src="/uploadify/swfobject.js" type="text/javascript"></script>
<script src="/js/json2.js" type="text/javascript"></script>
<link rel="stylesheet" type="text/css" href="/uploadify/uploadify.css">
<style type="text/css">
body {
	font: 13px Arial, Helvetica, Sans-serif;
}
</style>
</head>

<body>
	<h1>Uploadify Demo</h1>
	<div id="div1" style="font-size: 12px;"></div>
	<input id="uploadify" name="uploadify" type="file">
	<input type="button" id="subBtn" class="button1" value="上传">
	<img id="imgShow" src="" />
	<script type="text/javascript">
		$(function() {
			$('#uploadify').uploadify({
				'uploader':'uploadify.swf',
				'cancelImg':'cancel.png',
				'method': 'get',//提交方式
				'script':'http://up.beta.tootoo.cn/goodsPicUpload',//后台处理程序的相对路径
				'queueID': 'div1',
				'folder': 'img11111',//上传文件保存的位置
				'onComplete'	 : function(event,queueId,fileObj,response,data){
					var jsonObject = jQuery.parseJSON(response);
					alert(jsonObject.result + " - " + jsonObject.info);
					$("#imgShow").attr("src", "http://up.beta.tootoo.cn/imgs/" + jsonObject.info);
				},
				'onAllComplete': function (event, data){//文件全部上传完成后调用
				},
				'buttonText': '',//选择文件按钮文字
				//'buttonImg': 'button_browse.png',//选择文件按钮背景
				'hideButton': false,//是否隐藏选择文件按钮，默认为false
//				'width': 65,//设置按钮宽度 默认120
				'height': 23,//设置按钮高度 默认30
				'queueSizeLimit':6,//设置最多上传文件个数
				'sizeLimit': 2048000,//允许文件上传大小( 单位：KB)
				'auto':false,//是否立即上传
				//'fileExt' :'*.jpg,*.gif',//设置文件上传格式
				//'fileDesc': '请选择 .jpg,.gif 文件',//设置文件上传格式显示文字
				'multi': true //是否可以上传多个文件
			});

			$('#subBtn').click(function() {
				$('#uploadify').uploadifySettings('scriptData',{'imgName':'123'});
				$('#uploadify').uploadifyUpload();
			});

		});
	</script>
</body>
</html>