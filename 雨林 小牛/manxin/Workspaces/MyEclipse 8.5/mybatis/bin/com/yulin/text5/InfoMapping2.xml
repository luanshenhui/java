<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yulin.text5.InfoMapping2">
	<select id="findAll" resultMap="infoMap">
		select * from info
	</select>
	<select id="findDeptById" parameterType="int" resultType="com.yulin.text5.Dept">
		select * from dept where id = #{id}
	</select>
	<resultMap type="com.yulin.text5.Info" id="infoMap">
		<id property="id" column="id"/>
		<association property="dept" column="d_id" select="findDeptById">
			<id property="id" column="id"/>
		</association>
	</resultMap>
</mapper>