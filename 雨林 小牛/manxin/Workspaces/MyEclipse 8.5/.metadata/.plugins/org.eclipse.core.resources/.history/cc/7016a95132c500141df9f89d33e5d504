		<script type="text/javascript">
			var flag = false;
			function $(id){
				return document.getElementById(id);
			}
			function sjsj(tid,name,id){
				if(flag == false){
					var td = $(tid);
					var value = td.innerHTML;//取出表格中的值
					value = value.replace(/(^\s*)|(\s*$)/g,"");//替换空格
					td.innerHTML = "";
					var form = document.createElement("form");//创建表单对象
					form.action = "update.do?id="+id;//给表单添加请求
					form.id = "f"+tid;//给表单添加id
					form.method = "post";//post提交
					
					var input = document.createElement("input");
					input.value = value;
					input.name = name;//根据双击传过来的参数，设置input的name属性
					input.onblur = function(){
						flah = false;
						$("f"+tid).submit();//失去焦点时提交表单
					};
					form.appendChild(input);
					td.appendChild(form);
					flag = true;
				}else{
					alert("你不能再双击了")
				}
			}
			function kong(id){
				$(id).value="";
			}
			function hui(id){
				if($(id).value == ""){
					$(id).value = "请输入关键字";
				}
			}
		</script>
	</head>
