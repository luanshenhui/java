    <struts>
    <!-- 
    	这是一个通配符测试的例子
    	1.先模拟用户模块的增改查功能
    	2.关键字:用户-User，增加-Add，
    		修改-Update，查询-Find
    	3.命名规则：动作+模块
    	4.基于规则写出原始的配置及模拟功能
    	5.使用通配符重构，对比前后的配置，来观察通配符的优势
     -->
     <package name="user" namespace="/user" extends="struts-default">
     	<!-- 
     		action 的name规则:动作+模块;
     		action的class规则:动作+模块+Action;
     		jsp页面的规则:动作+模块
     	 -->
     	 
     </package>
    </struts>