<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yulin.productMapping">
	<select id="findByid" parameterType="int" resultType="com.yulin.dangdang.bean.Product">
		select * from d_product p,d_book b where p.id=b.id and p.id=#{id}
	</select>
</mapper>