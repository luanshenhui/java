html,body{background-color:#077ac0; height:100%}

/*主*/
.login_main{margin:0 auto;width:880px;height:100%;background-image:url(images/login/m_background.jpg); background-position:center; background-repeat:repeat-x;position:relative;}
.login_main .logo{width:100%;height:63px;margin:0;text-align:right;padding-top:20px}
.login_main .user{width:100%;height:182px;margin:80px 0 60px 0;text-align:center;}

/*表单*/
.login_main .form {width:100%;height:100px; text-align:center; font-size:12px}
.login_main .form .input_on{padding:5px 8px 0pt 5px;height:20px;width:176px;border:1px solid #FFF;background-color:#FFF;}
.login_main .form .input_off{padding:5px 8px 0pt 5px;height:20px;width:176px;border:1px solid #FFF;background-color:#e1f9ff;}
.login_main .form .input_move{padding:5px 8px 0pt 5px;height:20px;width:176px;border:1px solid #FFF;background-color:#FFF;}
.login_main .form .input_out{padding:5px 8px 0pt 5px;height:20px;width:176px;border:1px solid #00d5ff;background-color:#e1f9ff;}

/*按钮*/
.login_main .goto{float:left; margin-top:48px; margin-left:73px}
.login_main .btn {position:absolute;left:540px;top:444px;top:448px\9;top:484px\0;}
.login_main .keyboard{position:absolute;bottom:10px;left:10px}
.login_main .help{position:absolute;bottom:10px;right:10px;}


/*出错信息*/
div.container {background-color: #eee;border: 1px solid red;margin: 5px;padding: 5px;}
div.container ol li {list-style-type: disc;margin-left: 20px;}
div.container { display: none }
.container label.error {display: inline;}


/*软键盘*/
#softkeyboard_c { position:relative; width:880px;z-index:999}
#softkeyboard {position:absolute;top:150px; width:510px; z-index:180;display:none; border:1px #cccccc solid; background-color:#eeeeee; padding: 0 6px 6px 6px;}
#softkeyboard .key{border: #CCC 1px solid; margin:2px; height:24px; width:30px; background-color:#ffffff}
#softkeyboard .key2{border: #CCC 1px solid; margin:2px; background-color:#ffffff; width:112px; height:24px}
#softkeyboard .text{border: #CCC 0px solid; margin:2px; background-color:#eeeeee; width:112px; height:24px; color:#999999}
#softkeyboard .button {margin:2px;height:24px; padding-left:10px; padding-right:10px}
#softkeyboard .a{border: #00be36 1px solid;  background-color:#00be36; color:#FFF; }
#softkeyboard .b{border: #f00000 1px solid; margin:2px; background-color:#f00000; color:#FFF; }
#softkeyboard .c{border: #CCC 1px solid; margin:2px; background-color:#cccccc; }
#softkeyboard .td1b{ height:20px; margin-left:7px; margin-bottom:2px; width:204px}