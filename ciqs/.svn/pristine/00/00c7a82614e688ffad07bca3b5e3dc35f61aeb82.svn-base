<%@page contentType="text/html; charset=UTF-8" pageEncoding="UTF-8" %>
<%@ include file="/common/taglibs.jsp" %>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>风险预警</title>
    <%@ include file="/common/resource_show.jsp" %>
    <style type="text/css">
        input.datepick {
            background: #FFF url(/ciqs/static/dec/images/dpn.date.pick.gif) no-repeat right
        }

        #title_a {
            color: #ccc
        }

        #title_a:hover {
            color: white;
        }

        .box-img-bg {
            background-image: url(../static/show/disc/bg.png);
            box-sizing: border-box;
            width: 1198px;
            height: 164px;
            padding: 0 200px;
            position: absolute;
            display: none;
            font-size: 20px;
            line-height: 35px;
            color: white;
        }

        .box-content-style {
            display: table-cell;
            vertical-align: middle;
            text-align: center;
        }
        
        .hr{
	        text-decoration: none;
		    width: 140px;
		    height: 50px;
		    line-height: 75px;
		    text-align: center;
		    list-style-type: none;
		    font-size: 18px;
		    color: #FFF;
		    float: right;
        }
        
        select{
            width: 200px;
        }
    </style>
    <script type="text/javascript">
        function pageUtil(page) {
            $("#guifanList").attr("action", "/ciqs/warning/guifanList?page=" + page);
            $("#guifanList").submit();
        }
    </script>
</head>
<body class="bg-gary">
<div class="freeze_div_list">
    <div class="title-bg">
        <div class=" title-position margin-auto white">
            <div class="title">
                <span class="font-24px" style="color:white;">规范执法 /查询</span>
            </div>
            <%@ include file="/WEB-INF/jsp/userinfo.jsp" %>
        </div>
    </div>
    <div class="margin-auto" style="background-color: #1b5ea8;height: 80px">
        <div class=" title-position margin-auto white" style="display: inline;">
        	<a class="hr"  style="margin-right:80px;color: white"  href="${ctx}/warning/guifanList">规范执法</a>
        	<a class="hr" style="color: white">风险预警</a>
        	<a class="hr" style="color: white">超流程预警</a>
        </div>
        <div style="width: 420px; height: 30px;float: left;display: inline;">
        </div>
    </div>
</div>
<div class="blank_div_list">
	<div class="margin-auto width-1200" style="height: 50px;margin-top: 20px">当前位置：预警时长规则维护 - 查询</div>
</div>
<div class="margin-auto width-1200 search-box">
    <div id="alertBoxId" class="box-img-bg"><span class="box-content-style" id="alertContentId"></span></div>
    <form action="/ciqs/warning/guifanList" method="post" id="guifanList">
        <table width="100%" border="0" class="table-search margin-auto">
            <tr>
                <td height="25" align="left">开始时间：</td>
                <td height="25" align="left" style="padding-left: 25px;">结束时间：</td>
                <td height="25" align="left">业务类型</td>
                <td height="25" align="left">货物类别</td>
            </tr>
            <tr>
                <td width="300px" height="50"><input name="date_begin" type="text"
                                                   class="search-input input-140px datepick" id="date_begin" style="width: 190px;"
                                                   value="${obj.date_begin}"/></td>
                <td width="300px" height="50">
              	<input name="date_over" type="text" class="search-input input-140px datepick" id="date_over" style="width: 190px;"
                                                   value="${obj.date_over}"/>                                 
               	</td>
               	<td>
               	<input name="businessType" type="text" class="search-input input-140px" id="businessType" style="width: 190px;" value=""/>
               	</td>
               	<td>
               	<input name="" type="text" class="search-input input-140px" id="" style="width: 190px;" value=""/>
               	</td>
            </tr>
            
             <tr>
                <td height="25" align="left">预警状态：</td>
                <td height="25" align="left" style="padding-left: 25px;">预警解除状态：</td>
                <td height="25" align="left"></td>
                <td height="25" align="left"></td>
            </tr>
            <tr>
                <td width="300px" height="50">
                <select name="warningType" id="warningType"  class="search-input input-440px" >
                   	 <option value="">全部</option>
                   	 <option value="0">记录缺少</option>
                 	 <option value="1">记录被篡改</option>
                </select>                                  
               	</td>
                <td width="300px" height="50">
                <select name="warningFlag" id="warningFlag"  class="search-input input-440px" >
                   	 <option value="1">已解除</option>
                 	 <option value="0">未解除</option>
                </select>                                  
               	</td>
                <td style="width:250px">
                    <input type="submit" class="search-btn fo" value="搜索" style="cursor: pointer;display: inline;"
                           onclick="pageUtil('')"/>
                </td>
                <td>
                    <input type="reset" class="search-btn fo" value="清空" style="cursor: pointer;display: inline;"/>
                </td>
            </tr>
        </table>
    </form>
</div>

<div class="margin-auto width-1200 tips">共找到<span class="yellow font-18px">
	<c:if test="${not empty list }">
        ${counts}
    </c:if>
	<c:if test="${empty list }">
        0
    </c:if>
	</span>条记录
</div>
<div class="margin-auto width-1200  data-box">
    <div class="margin-cxjg">
        <table class="margin-cxjg_table" border="0" cellspacing="0" cellpadding="0">
            <tr class="thead">
                <td height="25">预警标识</td>
                <td height="25">业务类型</td>
                <td height="25">记录内容</td>
                <td height="25">预警状态</td>
                <td height="25">预警时间</td>
                <td height="25">预警解除状态</td>
                <td height="25">解除时间</td>
            </tr>
            <c:if test="${not empty list }">
                <c:forEach items="${list}" var="row">
                    <tr class="thead_nr">
                        <td width="14%" height="50" align="center">${row.warningId}</td>
                        <td width="14%" height="50" align="center"></td>
                        <td width="14%" height="50" align="center">${row.content}</td>
                        <td width="15%" height="50" align="center">
                        	<c:if test="${row.warningType eq '0'}">
	                        	缺失
	                        </c:if>
	                        <c:if test="${row.warningType eq '1'}">
	                        	篡改
	                        </c:if>
                        </td>
                        <td width="15%" height="50" align="center">${row.createTime}</td>
                       	<td width="14%" height="50" align="center">
                       		<c:if test="${row.warningFlag eq '0'}">
	                        	未解除
	                        </c:if>
	                        <c:if test="${row.warningFlag eq '1'}">
	                        	解除
	                        </c:if>
                       	</td>
                        <td width="14%" height="50" align="center">
                        	<c:if test="${row.warningFlag eq '1'}">
	                        	  <fmt:formatDate value="${row.updateTime}" type="both"  pattern="yyyy-MM-dd"/>
	                        </c:if>
                     	</td>
                    </tr>
                </c:forEach>
            </c:if>
            <tfoot>
            <jsp:include page="/common/pageUtil.jsp" flush="true"/>
            </tfoot>
        </table>
    </div>
</div>
<div class="margin-auto width-1200 tips"></div>
</body>
<script type="text/javascript">
    $("li").mouseenter(function () {
        var img = this.getElementsByTagName("img")[0];
        var str = img.getAttribute("content");
        var alertBox = document.getElementById("alertBoxId");
        var alertContent = document.getElementById("alertContentId");
        alertContent.innerText = str;
        alertBox.style.display = 'table';
    });

    $("li").mouseleave(function () {
        var alertBox = document.getElementById("alertBoxId")
        alertBox.style.display = 'none';
    });
</script>
</html>
