<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lsh.domain.Member">
	<!--随便起的名，	参数类型，返回类型(和别名一样)  -->
	<select id="getMemberByID" parameterType="_int" resultType="Member">
	<!--  根据id返回单个员工-->
	select * from member where id=#{id}
	<!-- 添加 -->
	</select>
	<insert id="add" parameterType="Member">
		insert into member values(#{id},#{name},#{sex},#{salary},#{department})
	</insert>
	
	<update id="update" parameterType="Member">
		update member set name=#{name},sex=#{sex},salary=#{salary},department=#{department} where id=#{id}
	</update>
	<delete id="delete" parameterType="_int">
		delete from member where id=#{id}
	</delete>
	
	<select id="all" resultType="Member">
		select * from member
	</select>

</mapper>