<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.f.domain.Category">
	<resultMap type="Category" id="Map01">
			<result property="id" column="cid"/>
			<result property="name" column="cname"/>
			<result property="code" column="ccode"/>
			<result property="info" column="cinfo"/>
			<collection property="list" resultMap="Map02"></collection>			
	</resultMap>
	<resultMap type="Product" id="Map02">
	<id property="id" column="id"/>
			<result property="code" column="code"/>
			<result property="name" column="name"/>	
			<result property="price" column="price"/>
			<result property="info" column="info"/>
	</resultMap>
	<!-- 添加数据 -->
	<select id="add" resultType="Category">
		insert into category values(#{id},#{code},#{name},#{info})
	</select>
	<!-- 删除数据 -->
	<select id="delete">
		delete from category where id=#{id}
	</select>
	<!-- 修改数据 -->
	<select id="update" parameterType="Category">
		update category 
		set code=#{code},name=#{name},info=#{info}
		where id =#{id}
	</select>
	<!-- 查询所有 -->
	<select id="getAll" resultMap="Map01">
		select p.id id,p.code code,p.name name,p.price price,p.info info,c.id cid,c.name cname,c.code ccode,c.info cinfo
		from product p,category  c 
		where p.cid(+)=c.id
	</select>
	<!-- 查询单个数据 -->
	<select id="getByID" parameterType="_long" resultMap="Map01">
		select p.id id,p.code code,p.name name,p.price price,p.info info,c.id cid,c.name cname,c.code ccode,c.info cinfo
		from product p,category  c 
		where p.cid(+)=c.id and c.id=#{id}
	</select>

</mapper>