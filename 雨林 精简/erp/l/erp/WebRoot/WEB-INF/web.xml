	    <filter-class>com.dongxianglong.filter.LoginFilter</filter-class>
	  </filter>
	   <filter-mapping>
	     <filter-name>filter</filter-name>
	     <url-pattern>/web/page/*</url-pattern>
	   </filter-mapping>
	   
	   
