	<servlet>
		<servlet-name>register</servlet-name>
		<servlet-class>com.dongxianglong.action.RegisterAction</servlet-class>
	</servlet>
	   <servlet-mapping>
		<servlet-name>register</servlet-name>
		<url-pattern>/register</url-pattern>
	</servlet-mapping>
	
	
	
