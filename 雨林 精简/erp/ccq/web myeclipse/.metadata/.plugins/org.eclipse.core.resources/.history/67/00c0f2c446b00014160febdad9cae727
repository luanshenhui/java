public class EditAction extends HttpServlet {


	protected void doGet(HttpServletRequest req, HttpServletResponse resp)
			throws ServletException, IOException {
		this.doPost(req, resp);
	}

	
	protected void doPost(HttpServletRequest req, HttpServletResponse resp)
			throws ServletException, IOException {
		req.setCharacterEncoding("UTF-8");
//		PersonService person=new PersonServiceImpl();
//		List<Person>list=person.getAll();
//		boolean boo=false;
//		String s="";
//		PersonService service=new PersonServiceImpl();
//		for(Person p:list){
//			if(p.getId()==Long.parseLong(req.getParameter("id"))){
//				p.setAge(Integer.parseInt(req.getParameter("age")));
//				p.setEmail(req.getParameter("email"));
//				p.setPhone(Long.parseLong(req.getParameter("phone")));
//				p.setSalary(Double.parseDouble(req.getParameter("salary")));
//				p.setSex(req.getParameter("sex"));
//				boo=service.update(p);
//				s=p.getUsername();
//			}
//		}
//		String path="";
