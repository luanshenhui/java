//		req.getRequestDispatcher(path).forward(req, resp);
////		req.getParameter("id");
//		System.out.println("修改成功");
		Long id=Long.parseLong(req.getParameter("id"));
		PersonService service=new PersonServiceImpl();
		Person person=service.getByID(id);
		person.setAge(Integer.parseInt(req.getParameter("age")));
		person.setEmail(req.getParameter("email"));
		person.setPhone(Long.parseLong(req.getParameter("phone")));
		person.setSalary(Double.parseDouble(req.getParameter("salary")));
		person.setSex(req.getParameter("sex"));
		
		
		if(service.update(person))
		{
			String path="/web/page/personview.jsp"
		req.getRequestDispatcher(path).forward(req, resp);
		};
		
		HttpSession session=req.getSession();
		session.setAttribute("person", person);
	}
	
	

}
