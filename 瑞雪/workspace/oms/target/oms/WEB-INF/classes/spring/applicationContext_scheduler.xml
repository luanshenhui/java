<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop" xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.1.xsd">

	<!-- quartz管理工厂类 -->
	<bean id="schedulerFactory" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
			<list>
				<!-- OA待办事项通知每1小生成一个.txt -->
				<ref bean="backlogNoticeJobBeanTrigger" />
			</list>
		</property>
	</bean>

	<!--定时获取不需要拆分多供应商的订单并且生成结算记录 -->
	<bean id="backlogNoticeJobBeanTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail" ref="backlogNoticeJobBean" />
		<!-- 每1小时执行一次 0 0 * * * ? --> <!-- 每5分钟执行一次 0 0 0/5 * * ? -->
		<property name="cronExpression" value="0 0 * * * ?" />
	</bean>
	<bean id="backlogNoticeJobBean" class="org.springframework.scheduling.quartz.JobDetailBean">
		<property name="jobClass" value="cn.rkylin.apollo.common.scheduler.BacklogNoticeJob" />
	</bean>
</beans>