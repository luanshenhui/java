package cn.rkylin.oms.system.appClient.service;

import org.apache.commons.lang.StringUtils;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.github.pagehelper.PageInfo;

import cn.rkylin.core.service.ApolloService;
import cn.rkylin.oms.system.appClient.dao.IAppDAO;
import cn.rkylin.oms.system.appClient.domain.App;
import cn.rkylin.oms.system.appClient.vo.AppVo;

@Service("appService")
public class AppServiceImpl  extends ApolloService implements IAppService{
	@Autowired
	private IAppDAO appDAO;

	@Override
	public PageInfo<AppVo> findByWhere(int page, int rows, AppVo AppVo) throws Exception {
		PageInfo<AppVo> list = findPage(page, rows, "selectAppListPage", AppVo);
		return list;
	}

	@Override
	public void saveApp(App app) throws Exception {
		try {
			if(null!=app && !StringUtils.isEmpty(app.getAppId())){
				appDAO.updateApp(app);
			}else if(null!=app && StringUtils.isEmpty(app.getAppId())){
				app.setAppId(java.util.UUID.randomUUID().toString().replaceAll("-", ""));
				appDAO.saveApp(app);
			}
		} catch (Exception e) {
			e.printStackTrace();
			throw new Exception();
		}
		
	}

	@Override
	public void deleteApp(App app) throws Exception {
		try {
			appDAO.deleteApp(app);
		} catch (Exception e) {
			e.printStackTrace();
			throw new Exception();
		}
		
	}

	@Override
	public AppVo getAppDetail(App app) throws Exception {
		try {
			AppVo v=appDAO.getAppDetail(app);
			return v;
		} catch (Exception e) {
			e.printStackTrace();
			throw new Exception();
		}
	}

}
