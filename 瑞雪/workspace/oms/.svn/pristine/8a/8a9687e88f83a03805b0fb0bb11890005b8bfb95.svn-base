<body>
    <div class="page-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-3 col-xs-3 col-sm-3 col-md-3">
                    <div class="portlet box portlet-blue tabbable">
                        <div class="portlet-header">
                            <div class="caption">选择角色</div>
                        </div>
                        <div class="portlet-body">
                            <div id="generalTabContent" class="tab-content responsive">
                                <div id="alert-tab" class="tab-pane fade in active">
                                    <div class="row">
                                        <div class="list-group" name="listbox" id="listbox" size="15"
                                            style="height: 500px; padding-left: 15px; padding-right: 15px; overflow: auto"></div>
                                    </div>
                                </div>
                                <div id="note-tab" class="tab-pane fade">
                                    <div class="row">
                                        <div id="orgTree" style="height: 350px; overflow: auto;"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-9 col-xs-9 col-sm-9 col-md-9">
                    <div class="portlet box portlet-violet">
                        <div class="portlet-header">
                            <div class="caption">可使用功能菜单</div>
                                <div class="actions">
                                    <a href="#" class="btn btn-xs btn-warning" style="margin-top:-8px;margin-bottom:-5px;"  onclick="savePrivileges()">
                                        <i class="fa fa-floppy-o"></i>&nbsp;保存
                                    </a>
                                </div>
                        </div>
                        <div class="portlet-body" style="height: 560px;">
                            <ul id="generalTab" class="nav nav-tabs ul-edit responsive">
                                <li class="active"><a href="#menu-tab" data-toggle="tab">菜单权限</a></li>
                                <li><a href="#project-tab" data-toggle="tab">项目权限</a></li>
                                <li><a href="#shop-tab" data-toggle="tab">店铺权限</a></li>
                            </ul>
                            <div id="generalTabContent" class="tab-content responsive">
                                <div id="menu-tab" class="tab-pane fade in active">
                                    <div class="row">
                                        <div class="pull-right" style="padding-right: 35px">
                                            <button class="btn btn-info btn-xs" type="button" id="btnClean" onClick="cleanSubnode()">
                                                <i class="fa fa-times"></i>&nbsp;清空子节点
                                            </button>
                                            <button class="btn btn-info btn-xs" type="button" id="btnExpand" onClick="expandAll()">
                                                <i class="fa fa-plus"></i>&nbsp;全展开
                                            </button>
                                            <button class="btn btn-info btn-xs" type="button" id="btnClose" onClick="closeAll()">
                                                <i class="fa fa-minus"></i>&nbsp;全折叠
                                            </button>
<!--                                             <button class="btn btn-info btn-xs" type="button" id="btnSave" onclick="savePrivileges()"> -->
<!--                                                 <i class="fa fa-floppy-o"></i>&nbsp;保存 -->
<!--                                             </button> -->
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div id="menuTree" style="overflow: auto;"></div>
                                    </div>
                                </div>
                                <div id="project-tab" class="tab-pane fade">
                                    <div class="portlet-body" style="overflow: auto; height: 450px">
                                        <div class="row">
                                            <div>
                                                <table id="t_project"
                                                    class="table table-hover table-striped table-bordered table-advanced tb-sticky-header"
                                                    width="100%">
                                                    <thead>
                                                        <tr>
                                                            <th id="thpro" style="width: 1%; padding: 10px;"><input id="chkAllProject" name="chkAllProject"
                                                                type="checkbox" colValue="chk" class="checkall" /></th>
                                                            <th colValue="prjName">项目名称</th>
                                                            <th colValue="prjType">项目类型</th>
                                                            <th colValue="cons">联系人</th>
                                                            <th colValue="tel">电话</th>
                                                            <th colValue="createTime">创建时间</th>
                                                            <th colValue="expireTime">到期时间</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div id="shop-tab" class="tab-pane fade">
                                    <div class="portlet-body" style="overflow: auto;height: 450px">
                                        <div class="row">
                                            <div>
<!--                                             <div class="container"> -->
                                                <table id="shopTable" class="table table-hover table-striped table-bordered table-advanced tb-sticky-header" width="100%">
                                                    <thead>
                                                        <tr>
                                                            <th id="thshop" style="width: 1%; padding: 10px;">
                                                                <input id="chkAllShop" name="chkAllShop" type="checkbox" colValue="chk" class="checkall"/>
                                                            </th>
                                                            <th width="19%" colValue="shopName">店铺名称</th>
                                                            <th width="20%" colValue="shopAccount">平台帐号</th>
                                                            <th width="20%" colValue="prjName">所属项目</th>
                                                            <th width="20%" colValue="parentshopname">父店铺</th>
                                                            <th width="20%" colValue="expireTime">到期时间</th>
                                                        </tr>
                                                    </thead>
                                                     <tbody>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

