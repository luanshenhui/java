<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:aop="http://www.springframework.org/schema/aop"
		xmlns:tx="http://www.springframework.org/schema/tx"
		xsi:schemaLocation="
			http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
			http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
			http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.5.xsd">
	<bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>				
				<value>WEB-INF/jdbc.properties</value>			
			</list>
		</property>
	</bean>
   <bean id="authorizationSqlMapClient" class="org.springframework.orm.ibatis.SqlMapClientFactoryBean">
        <property name="configLocation" value="/WEB-INF/conf/authorization/ibatis/sqlMapConfig-authorization-MySQL.xml"/>
		<property name="dataSource" ref="dataSource"/>
	</bean>
	<bean id="menuDAO" class="com.dhc.authorization.resource.menu.dao.ibatis.MenuDAOImpl">
		<property name="sqlMapClient" ref="authorizationSqlMapClient"/>
	</bean>
	<bean id="privilegeDAO" class="com.dhc.authorization.resource.privilege.dao.ibatis.PrivilegeDAOImpl">
		<property name="sqlMapClient" ref="authorizationSqlMapClient"/>
	</bean>
		<bean id="delegateDAO" class="com.dhc.authorization.delegate.dao.ibatis.DelegateDAOImpl">
		<property name="sqlMapClient" ref="authorizationSqlMapClient"/>
	</bean>
	<bean id="menuTreeDAO" class="com.dhc.base.menu.dao.ibatis.MenuTreeDAOImpl">
		<property name="sqlMapClient" ref="authorizationSqlMapClient"/>
	</bean>
</beans>