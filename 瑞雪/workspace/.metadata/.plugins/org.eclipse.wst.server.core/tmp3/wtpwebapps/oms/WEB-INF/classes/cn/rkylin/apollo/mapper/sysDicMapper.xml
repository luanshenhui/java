<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.rkylin.apollo.mapper.sysDicMapper">
	<sql id="columns">COLUMN_KEY as VALUE,COLUMN_VALUE as TEXT</sql>
	<sql id="t_name">sys_dic_fm</sql>
	<select id="findDicByKey" resultType="cn.rkylin.core.ApolloRet" parameterType="cn.rkylin.core.ApolloMap">
		select
		<include refid="columns" />
		from
		sys_dic_fm t
		where 1=1
		<if test="null != tableName and '' != tableName">
			and t.table_name = #{tableName}
		</if>
		<if test="null != columnName and '' != columnName">
			and t.column_name = #{columnName}
		</if>
		<if test="null != columnKey and '' != columnKey">
			and t.column_key = #{columnKey}
		</if>
	</select>

	<select id="findPlat" resultType="cn.rkylin.core.ApolloRet" parameterType="cn.rkylin.core.ApolloMap">
		select id as VALUE,plat_name as TEXT
		from fm_plat t where 1=1
	</select>

	<select id="findSysDicFmTable" resultType="cn.rkylin.core.ApolloRet" parameterType="cn.rkylin.core.ApolloMap">
		select t.column_name,t.column_key,t.column_value from sys_dic_fm t where 1=1
		<if test="null != fmProjectManage and '' != fmProjectManage">
			and t.table_name = #{fmProjectManage}
		</if>
	</select>
</mapper>
