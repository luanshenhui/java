<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog" />
  </configSections>
  <appSettings>
    <!-- サービス名 -->
    <add key="ServiceName" value="HainsRecvMyakuhaResult" />
    <!-- 表示名 -->
    <add key="ServiceDisplayName" value="HainsRecvMyakuhaResult" />
    <!-- 説明 -->
    <add key="ServiceDescription" value="日本光電結果連携" />
    <!-- 依存するサービス（カンマ","で区切って複数のサービス名を指定できます） -->
    <add key="ServiceDependedOn" value="" />
    <!-- 共有フォルダパス -->
    <add key="ShareFolder" value="C:\Hainsi\WindowsServices\Test\Share" />
    <!-- 共有フォルダユーザID -->
    <add key="UserID" value="" />
    <!-- 共有フォルダパスワード -->
    <add key="Password" value="" />
    <!-- ネットワークフォルダフラグ(0:local,1:network) -->
    <add key="networkFolder" value="0" />
    <!-- フィルター(監視する拡張子を設定、すべて監視するときは""にする) -->
    <add key="Filter" value="*.csv" />
    <!-- バックアップフォルダパスOK -->
    <add key="BackupFolderOK" value="C:\Hainsi\WindowsServices\Test\Bk\OK" />
    <!-- バックアップフォルダパスNG -->
    <add key="BackupFolderNG" value="C:\Hainsi\WindowsServices\Test\Bk\NG" />
    <!-- 更新者 -->
    <add key="UpdUser" value="Raypax" />
    <!-- Web API のベースURL -->
    <add key="ApiUri" value="http://localhost:54756/" />
  </appSettings>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7" />
  </startup>
  <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <targets>
      <target xsi:type="File" name="InfoLog" fileName="C:/Hainsi/WindowsServices/Logs/HainsRecvMyakuhaResult/info.log"
              layout="${longdate} [${uppercase:${level:padding=-5}}] ${message} ${exception:format=tostring}"
              archiveEvery="Day"
              archiveFileName="C:/Hainsi/WindowsServices/Logs/HainsRecvMyakuhaResult/info_{#}.log"
              archiveNumbering="Date"
              archiveDateFormat="yyyyMMdd"
              maxArchiveFiles="30"/>
      <target xsi:type="File" name="ErrorLog" fileName="C:/Hainsi/WindowsServices/Logs/HainsRecvMyakuhaResult/error.log"
              layout="${longdate} [${uppercase:${level:padding=-5}}] ${message} ${exception:format=tostring}"
              archiveEvery="Day"
              archiveFileName="C:/Hainsi/WindowsServices/Logs/HainsRecvMyakuhaResult/error_{#}.log"
              archiveNumbering="Date"
              archiveDateFormat="yyyyMMdd"
              maxArchiveFiles="30"/>
    </targets>
    <rules>
      <logger name="*" levels="Info,Error" writeTo="InfoLog" />
      <logger name="*" levels="Error" writeTo="ErrorLog" />
    </rules>
  </nlog>
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="Newtonsoft.Json" publicKeyToken="30ad4fe6b2a6aeed" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-11.0.0.0" newVersion="11.0.0.0" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
</configuration>
