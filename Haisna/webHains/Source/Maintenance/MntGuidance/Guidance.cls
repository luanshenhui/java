VERSION 1.0 CLASS
BEGIN
  MultiUse = -1  'True
  Persistable = 0  'NotPersistable
  DataBindingBehavior = 0  'vbNone
  DataSourceBehavior  = 0  'vbNone
  MTSTransactionMode  = 0  'NotAnMTSObject
END
Attribute VB_Name = "Guidance"
Attribute VB_GlobalNameSpace = False
Attribute VB_Creatable = True
Attribute VB_PredeclaredId = False
Attribute VB_Exposed = True
Option Explicit

Private mstrGuidanceCd      As String   '指導内容コード
Private mstrJudClassCd      As String   '判定分類コード
Private mblnUpdated         As Boolean  'TRUE:更新あり、FALSE:更新なし

Public Property Get GuidanceCd() As String

    GuidanceCd = mstrGuidanceCd
    
End Property

Public Property Get Updated() As Boolean

    Updated = mblnUpdated

End Property

Public Property Let GuidanceCd(ByVal vntNewValue As String)

    mstrGuidanceCd = vntNewValue
    
End Property

Public Property Let JudClassCd(ByVal vntNewValue As String)

    If IsNumeric(vntNewValue) = False Then
        mstrJudClassCd = 0
    Else
        mstrJudClassCd = vntNewValue
    End If
    
End Property


Public Sub Show(Optional lngStyle As Long)

    Dim objForm As frmGuidance
    
    '指導内容テーブルメンテナンス画面をロード
    Set objForm = New frmGuidance
    With objForm
        .JudClassCd = mstrJudClassCd
        .GuidanceCd = mstrGuidanceCd
    End With
    Load objForm
    
    Do
        '表示不能時は画面を閉じる
        If objForm.Initialize = False Then
            Unload objForm
            Exit Do
        End If
        
        '画面表示
        objForm.Show lngStyle
        mblnUpdated = objForm.Updated
        
        Exit Do
    Loop
    
    Set objForm = Nothing
    
End Sub
