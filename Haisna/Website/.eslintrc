{
    "parser": "babel-eslint",
    "extends": "airbnb",
    "env": {
        "browser": true
    },
    "rules": {
        "strict": 0,
        "arrow-parens": [
            "error",
            "always"
        ],
        "jsx-a11y/anchor-is-valid": [
            "off"
        ],
        "linebreak-style": [
            "off"
        ],
        "max-len": [
            "error",
            200
        ],
        "no-mixed-operators": [
            "error",
            {
                "groups": [
                    ["&", "|", "^", "~", "<<", ">>", ">>>"],
                    ["&&", "||"]
                ]
            }
        ],
        "object-curly-newline": [
            "off"
        ],
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "react/no-find-dom-node": 1,
        "unicode-bom": [
            "off"
        ]
    }
}
